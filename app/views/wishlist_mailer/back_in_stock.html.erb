<h2 style="margin: 0 0 20px 0; font-size: 22px; color: #1a1a1a;">Back in Stock!</h2>

<p style="margin: 0 0 8px 0; font-size: 15px; color: #333333; line-height: 1.6;">
  <%= I18n.t("mailers.wishlist_mailer.back_in_stock.greeting", name: @user.name) %>
</p>
<p style="margin: 0 0 25px 0; font-size: 15px; color: #333333; line-height: 1.6;">
  <%= I18n.t("mailers.wishlist_mailer.back_in_stock.body", product: @product.name) %>
</p>

<!-- Product card -->
<div style="background-color: #f9fafb; border-radius: 4px; padding: 20px; margin-bottom: 25px;">
  <p style="margin: 0 0 6px 0; font-size: 16px; font-weight: bold; color: #1a1a1a;"><%= @product.name %></p>
  <% if @variant %>
    <p style="margin: 0 0 6px 0; font-size: 13px; color: #888888;"><%= @variant.display_name %></p>
  <% end %>
  <p style="margin: 0; font-size: 15px; color: #333333;">
    <strong><%= I18n.t("wishlist.current_price") %>:</strong> <%= number_to_currency(@wishlist_item.current_price) %>
  </p>
</div>

<!-- CTA button -->
<table width="100%" cellpadding="0" cellspacing="0" style="margin-bottom: 25px;">
  <tr>
    <td align="center">
      <a href="<%= product_url(@product.slug, locale: I18n.locale) %>" style="display: inline-block; background-color: #1a1a1a; color: #ffffff; text-decoration: none; padding: 14px 40px; font-size: 14px; font-weight: bold; border-radius: 4px; letter-spacing: 0.5px;">
        <%= I18n.t("mailers.wishlist_mailer.back_in_stock.cta").upcase %>
      </a>
    </td>
  </tr>
</table>

<p style="margin: 0; font-size: 12px; color: #999999; text-align: center;">
  <%= I18n.t("mailers.wishlist_mailer.common.footer") %>
</p>

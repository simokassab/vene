<% content_for :title, "#{t('nav.login')} - VENE Jewelry" %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-white via-gray-50 to-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8" x-data="{ showPassword: false }">
    <!-- Logo & Header -->
    <div class="text-center">
      <div class="flex justify-center">
        <%= link_to root_path(locale: I18n.locale) do %>
          <%= image_tag "logo.jpg", alt: "VENE Jewelry", class: "h-20 w-auto object-contain" %>
        <% end %>
      </div>
      <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
        <%= t("nav.login") %>
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        Or
        <%= link_to t("nav.register"), new_user_registration_path(locale: I18n.locale), class: "font-medium text-gray-900 hover:text-gray-700 underline" %>
      </p>
    </div>

    <!-- Login Form -->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
      <div class="bg-white rounded-2xl shadow-xl border border-gray-200 p-8 space-y-6">
        <!-- Email Field -->
        <div>
          <%= f.label :email, class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "appearance-none block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all", placeholder: "you@example.com" %>
          </div>
        </div>

        <!-- Password Field -->
        <div>
          <%= f.label :password, class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
            </div>
            <%= f.password_field :password, autocomplete: "current-password", class: "appearance-none block w-full pl-10 pr-10 py-3 border border-gray-300 rounded-lg placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all", placeholder: "••••••••", "x-bind:type": "showPassword ? 'text' : 'password'" %>
            <button type="button" @click="showPassword = !showPassword" class="absolute inset-y-0 right-0 pr-3 flex items-center">
              <svg x-show="!showPassword" class="h-5 w-5 text-gray-400 hover:text-gray-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
              <svg x-show="showPassword" class="h-5 w-5 text-gray-400 hover:text-gray-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="display: none;">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"/>
              </svg>
            </button>
          </div>
        </div>

        <!-- Remember Me -->
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-gray-900 focus:ring-gray-900 border-gray-300 rounded cursor-pointer" %>
            <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700 cursor-pointer" %>
          </div>
        </div>

        <!-- Submit Button -->
        <div>
          <%= f.submit t("nav.login"), class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-semibold rounded-lg text-white bg-gray-900 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 shadow-lg transition-all duration-200 transform hover:scale-[1.02]" %>
        </div>

        <!-- Divider -->
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-500">New to VENE?</span>
          </div>
        </div>

        <!-- Register Link -->
        <div>
          <%= link_to new_user_registration_path(locale: I18n.locale), class: "group relative w-full flex justify-center py-3 px-4 border border-gray-300 text-sm font-semibold rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 transition-all duration-200" do %>
            <%= t("nav.register") %>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Footer -->
    <div class="text-center">
      <p class="text-xs text-gray-500">
        By signing in, you agree to our
        <%= link_to "Terms", page_path("terms-and-conditions", locale: I18n.locale), class: "underline hover:text-gray-700" %>
        and
        <%= link_to "Privacy Policy", page_path("privacy-policy", locale: I18n.locale), class: "underline hover:text-gray-700" %>
      </p>
    </div>
  </div>
</div>

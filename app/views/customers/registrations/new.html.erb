<% content_for :title, "#{t('nav.register')} - VENE Jewelry" %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-white via-gray-50 to-gray-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl w-full space-y-8" x-data="{ showPassword: false, showPasswordConfirmation: false }">
    <!-- Logo & Header -->
    <div class="text-center">
      <div class="flex justify-center">
        <%= link_to root_path(locale: I18n.locale) do %>
          <%= image_tag "logo.jpg", alt: "VENE Jewelry", class: "h-20 w-auto object-contain" %>
        <% end %>
      </div>
      <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
        <%= t("nav.register") %>
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        Already have an account?
        <%= link_to t("nav.login"), new_user_session_path(locale: I18n.locale), class: "font-medium text-gray-900 hover:text-gray-700 underline" %>
      </p>
    </div>

    <!-- Registration Form -->
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-8" }) do |f| %>
      <div class="bg-white rounded-2xl shadow-xl border border-gray-200 p-8 space-y-6">

        <!-- Name Field -->
        <div>
          <%= f.label :name, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
            <%= t("activerecord.attributes.user.name", default: "Full Name") %>
            <span class="text-red-500">*</span>
          <% end %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <%= f.text_field :name, autofocus: true, class: "appearance-none block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all", placeholder: "John Doe" %>
          </div>
        </div>

        <!-- Email & Phone Row -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Email Field -->
          <div>
            <%= f.label :email, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
              <%= t("activerecord.attributes.user.email", default: "Email") %>
              <span class="text-red-500">*</span>
            <% end %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <%= f.email_field :email, autocomplete: "email", class: "appearance-none block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all", placeholder: "you@example.com" %>
            </div>
          </div>

          <!-- Phone Field -->
          <div>
            <%= f.label :phone, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
              <%= t("activerecord.attributes.user.phone", default: "Phone") %>
              <span class="text-red-500">*</span>
            <% end %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <%= f.tel_field :phone, autocomplete: "tel", class: "appearance-none block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all", placeholder: "+1 234 567 8900" %>
            </div>
          </div>
        </div>

        <!-- Address Section Header -->
        <div class="pt-4 border-t border-gray-200">
          <h3 class="text-sm font-semibold text-gray-900 mb-4">Default Delivery Address (Optional)</h3>
        </div>

        <!-- Country & City Row -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Country Field -->
          <div>
            <%= f.label :default_country, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
              <%= t("activerecord.attributes.user.default_country", default: "Country") %>
            <% end %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <%= f.text_field :default_country, autocomplete: "country-name", class: "appearance-none block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all", placeholder: "United States" %>
            </div>
          </div>

          <!-- City Field -->
          <div>
            <%= f.label :default_city, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
              <%= t("activerecord.attributes.user.default_city", default: "City") %>
            <% end %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              </div>
              <%= f.text_field :default_city, autocomplete: "address-level2", class: "appearance-none block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all", placeholder: "New York" %>
            </div>
          </div>
        </div>

        <!-- Address Field -->
        <div>
          <%= f.label :default_address, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
            <%= t("activerecord.attributes.user.default_address", default: "Street Address") %>
          <% end %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <%= f.text_area :default_address, rows: 3, autocomplete: "street-address", class: "appearance-none block w-full pl-10 pr-3 py-3 border border-gray-300 rounded-lg placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all resize-none", placeholder: "123 Main Street, Apt 4B" %>
          </div>
        </div>

        <!-- Password Section Header -->
        <div class="pt-4 border-t border-gray-200">
          <h3 class="text-sm font-semibold text-gray-900 mb-4">Security</h3>
        </div>

        <!-- Password & Confirmation Row -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Password Field -->
          <div>
            <%= f.label :password, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
              <%= t("activerecord.attributes.user.password", default: "Password") %>
              <span class="text-red-500">*</span>
            <% end %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                </svg>
              </div>
              <%= f.password_field :password, autocomplete: "new-password", class: "appearance-none block w-full pl-10 pr-10 py-3 border border-gray-300 rounded-lg placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all", placeholder: "••••••••", "x-bind:type": "showPassword ? 'text' : 'password'" %>
              <button type="button" @click="showPassword = !showPassword" class="absolute inset-y-0 right-0 pr-3 flex items-center">
                <svg x-show="!showPassword" class="h-5 w-5 text-gray-400 hover:text-gray-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
                <svg x-show="showPassword" class="h-5 w-5 text-gray-400 hover:text-gray-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="display: none;">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"/>
                </svg>
              </button>
            </div>
            <p class="mt-1 text-xs text-gray-500">Minimum 6 characters</p>
          </div>

          <!-- Password Confirmation Field -->
          <div>
            <%= f.label :password_confirmation, class: "block text-sm font-semibold text-gray-700 mb-2" do %>
              <%= t("activerecord.attributes.user.password_confirmation", default: "Confirm Password") %>
              <span class="text-red-500">*</span>
            <% end %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "appearance-none block w-full pl-10 pr-10 py-3 border border-gray-300 rounded-lg placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all", placeholder: "••••••••", "x-bind:type": "showPasswordConfirmation ? 'text' : 'password'" %>
              <button type="button" @click="showPasswordConfirmation = !showPasswordConfirmation" class="absolute inset-y-0 right-0 pr-3 flex items-center">
                <svg x-show="!showPasswordConfirmation" class="h-5 w-5 text-gray-400 hover:text-gray-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
                <svg x-show="showPasswordConfirmation" class="h-5 w-5 text-gray-400 hover:text-gray-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="display: none;">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"/>
                </svg>
              </button>
            </div>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="pt-4">
          <%= f.submit t("nav.register"), class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-semibold rounded-lg text-white bg-gray-900 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 shadow-lg transition-all duration-200 transform hover:scale-[1.02]" %>
        </div>

        <!-- Login Link -->
        <div class="text-center pt-2">
          <p class="text-sm text-gray-600">
            Already have an account?
            <%= link_to t("nav.login"), new_user_session_path(locale: I18n.locale), class: "font-medium text-gray-900 hover:text-gray-700 underline" %>
          </p>
        </div>
      </div>
    <% end %>

    <!-- Footer -->
    <div class="text-center">
      <p class="text-xs text-gray-500">
        By creating an account, you agree to our
        <%= link_to "Terms", page_path("terms-and-conditions", locale: I18n.locale), class: "underline hover:text-gray-700" %>
        and
        <%= link_to "Privacy Policy", page_path("privacy-policy", locale: I18n.locale), class: "underline hover:text-gray-700" %>
      </p>
    </div>
  </div>
</div>

<% content_for :full_width, true %>

<!-- Alpine.js State Management -->
<div x-data="{
  removingItem: null,
  showContinueShopping: false,
  showRemoveModal: false,
  itemToRemove: null
}" class="min-h-screen bg-gray-50 pb-12">

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-32 md:pt-36">
    <!-- Flash Messages -->
    <% flash.each do |key, value| %>
      <div class="mb-6 rounded-lg border-2 px-6 py-4 <%= key.to_s == 'alert' ? 'border-red-300 bg-red-50 text-red-800' : 'border-emerald-300 bg-emerald-50 text-emerald-800' %> shadow-sm">
        <div class="flex items-center gap-3">
          <% if key.to_s == 'alert' %>
            <svg class="w-5 h-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
          <% else %>
            <svg class="w-5 h-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          <% end %>
          <span class="font-medium"><%= value %></span>
        </div>
      </div>
    <% end %>

    <!-- Page Header -->
    <div class="mb-8">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-2">
        <%= t("cart.title", default: "Shopping Cart") %>
      </h1>
      <p class="text-gray-600">
        <% if @cart.items.any? %>
          <%= @cart.items.count %> <%= t("cart.items_count") %> <%= t("cart.in_cart") %>
        <% else %>
          <%= t("cart.empty_subtitle", default: "Your cart is currently empty") %>
        <% end %>
      </p>
    </div>

    <% if @cart.items.empty? %>
      <!-- Empty Cart State -->
      <div class="text-center py-20 bg-white rounded-2xl shadow-lg">
        <div class="inline-block p-8 bg-gray-100 rounded-full mb-6">
          <svg class="w-24 h-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
        </div>
        <h3 class="text-3xl font-bold text-gray-900 mb-4">
          <%= t("cart.empty", default: "Your cart is empty") %>
        </h3>
        <p class="text-gray-600 mb-8 text-lg">
          <%= t("cart.empty_message", default: "Start adding beautiful jewelry pieces to your collection") %>
        </p>
        <%= link_to root_path(locale: I18n.locale),
          class: "inline-flex items-center px-8 py-4 bg-gray-700 hover:bg-gray-800 text-white font-semibold rounded-full shadow-lg transition-all duration-300 hover:shadow-xl hover:scale-105" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
          <%= t("cart.start_shopping", default: "Start Shopping") %>
        <% end %>
      </div>
    <% else %>
      <!-- Cart Items & Summary Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

        <!-- LEFT: Cart Items -->
        <div class="lg:col-span-2 space-y-4">
          <% @cart.items.each_with_index do |item, index| %>
            <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 animate-fade-in"
                 style="animation-delay: <%= index * 100 %>ms;"
                 :class="removingItem === <%= index %> ? 'opacity-50' : ''">

              <div class="flex flex-col sm:flex-row gap-6 p-6">
                <!-- Product Image -->
                <div class="flex-shrink-0">
                  <% if item.product.primary_image&.image&.url %>
                    <%= link_to product_path(item.product.slug, locale: I18n.locale),
                      class: "block w-32 h-32 rounded-xl overflow-hidden bg-gray-100 group" do %>
                      <%= image_tag item.product.primary_image.image.url,
                        class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" %>
                    <% end %>
                  <% else %>
                    <div class="w-32 h-32 rounded-xl bg-gradient-to-br from-gray-200 to-gray-300 flex items-center justify-center">
                      <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                      </svg>
                    </div>
                  <% end %>
                </div>

                <!-- Product Details -->
                <div class="flex-1 min-w-0">
                  <div class="flex items-start justify-between gap-4 mb-3">
                    <div class="flex-1">
                      <%= link_to product_path(item.product.slug, locale: I18n.locale) do %>
                        <h3 class="text-lg font-semibold text-gray-900 mb-1 hover:text-gray-700 transition-colors line-clamp-2">
                          <%= item.product.name(I18n.locale) %>
                        </h3>
                      <% end %>
                      <div class="space-y-1">
                        <p class="text-sm text-gray-600">
                          <%= item.product.category.name(I18n.locale) %>
                        </p>
                        <% if item.product_variant %>
                          <p class="text-sm font-medium text-gray-900">
                            <%= item.product_variant.display_name %>
                          </p>
                        <% end %>
                        <% if item.is_preorder? %>
                          <div class="flex items-center gap-1.5 mt-1">
                            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-800">
                              <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                              </svg>
                              <%= t("orders.preorder", default: "Pre-Order") %>
                            </span>
                            <% if item.estimated_delivery_date %>
                              <span class="text-xs text-amber-700">
                                <%= t("orders.preorder_ships_by", date: l(item.estimated_delivery_date, format: :short)) %>
                              </span>
                            <% end %>
                          </div>
                        <% end %>
                      </div>
                    </div>
                    <div class="text-right">
                      <div class="text-2xl font-bold text-gray-900">
                        <%= number_to_currency(item.line_total, unit: current_settings.default_currency) %>
                      </div>
                      <div class="text-sm text-gray-500">
                        <%= number_to_currency(item.product.price, unit: current_settings.default_currency) %> <%= t("cart.each") %>
                      </div>
                    </div>
                  </div>

                  <!-- Quantity & Actions -->
                  <div class="flex items-center justify-between gap-4">
                    <!-- Quantity Selector -->
                    <%= form_with url: update_item_cart_path(locale: I18n.locale), method: :patch, local: true,
                      class: "flex items-center gap-3" do |f| %>
                      <%= hidden_field_tag :cart_key, item.cart_key %>
                      <div class="flex items-center border-2 border-gray-300 rounded-lg bg-white">
                        <button type="button"
                                onclick="this.nextElementSibling.value = Math.max(1, parseInt(this.nextElementSibling.value) - 1)"
                                class="px-3 py-2 hover:bg-gray-100 transition-colors">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
                          </svg>
                        </button>
                        <%= number_field_tag :quantity, item.quantity,
                          min: 1,
                          class: "w-16 text-center border-x-2 border-gray-300 py-2 focus:outline-none font-semibold" %>
                        <button type="button"
                                onclick="this.previousElementSibling.value = parseInt(this.previousElementSibling.value) + 1"
                                class="px-3 py-2 hover:bg-gray-100 transition-colors">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                          </svg>
                        </button>
                      </div>
                      <%= f.submit t("cart.update", default: "Update"),
                        class: "px-4 py-2 text-sm font-medium text-gray-900 hover:text-gray-700 hover:bg-gray-900/10 rounded-lg transition-colors cursor-pointer" %>
                    <% end %>

                    <!-- Remove Button -->
                    <button type="button"
                            @click="showRemoveModal = true; itemToRemove = '<%= item.cart_key %>'"
                            class="flex items-center gap-2 px-4 py-2 text-sm font-medium text-red-600 hover:text-red-700 hover:bg-red-50 rounded-lg transition-colors">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                      <%= t("cart.remove", default: "Remove") %>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Pre-Order Disclaimer -->
          <% if @cart.items.any?(&:is_preorder?) %>
            <div class="mt-6 bg-amber-50 border border-amber-200 rounded-xl p-6">
              <div class="flex items-start gap-3">
                <div class="flex-shrink-0 mt-0.5">
                  <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div class="flex-1">
                  <h3 class="text-sm font-semibold text-amber-900 mb-2">
                    <%= t("cart.preorder_notice_title", default: "Pre-Order Items in Cart") %>
                  </h3>
                  <p class="text-sm text-amber-800 leading-relaxed">
                    <%= current_settings.preorder_disclaimer(I18n.locale) %>
                  </p>
                  <% if @cart.items.select(&:is_preorder?).any? %>
                    <p class="text-xs text-amber-700 mt-2">
                      <%= t("cart.preorder_ship_together", default: "If your order contains both in-stock and pre-order items, all items will be shipped together when pre-order items become available.") %>
                    </p>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Continue Shopping -->
          <div class="mt-6">
            <%= link_to root_path(locale: I18n.locale),
              class: "inline-flex items-center text-gray-900 hover:text-gray-700 font-medium transition-colors" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
              </svg>
              <%= t("cart.continue_shopping", default: "Continue Shopping") %>
            <% end %>
          </div>
        </div>

        <!-- RIGHT: Order Summary -->
        <div class="lg:sticky lg:top-24 lg:self-start">
          <div class="bg-white rounded-2xl shadow-xl p-8 space-y-6">
            <h2 class="text-2xl font-bold text-gray-900 pb-4 border-b border-gray-200">
              <%= t("cart.summary", default: "Order Summary") %>
            </h2>

            <!-- Subtotal -->
            <div class="space-y-3">
              <div class="flex justify-between text-gray-600">
                <span><%= t("orders.subtotal", default: "Subtotal") %></span>
                <span class="font-semibold text-gray-900">
                  <%= number_to_currency(@cart.subtotal, unit: current_settings.default_currency) %>
                </span>
              </div>

              <!-- Shipping -->
              <div class="flex justify-between text-gray-600">
                <span class="flex items-center gap-2">
                  <%= t("orders.shipping", default: "Shipping") %>
                  <span class="text-xs bg-green-100 text-green-700 px-2 py-1 rounded-full"><%= t("products.shipping_title") %></span>
                </span>
                <span class="font-semibold text-gray-500 text-sm">
                  <%= t("checkout.calculated_at_checkout", default: "Calculated at checkout") %>
                </span>
              </div>

              <!-- Discount (if coupon applied) -->
              <% if @cart.has_coupon? && @cart.discount_amount > 0 %>
                <div class="flex justify-between text-green-600">
                  <span class="flex items-center gap-2">
                    <%= t("coupons.discount", default: "Discount") %>
                    <span class="text-xs font-mono font-bold"><%= @cart.coupon&.code %></span>
                  </span>
                  <span class="font-semibold">
                    -<%= number_to_currency(@cart.discount_amount, unit: current_settings.default_currency) %>
                  </span>
                </div>
              <% end %>
            </div>

            <!-- Coupon Code Section -->
            <div class="pt-4 border-t border-gray-200">
              <% if @cart.has_coupon? %>
                <!-- Coupon Applied -->
                <div class="bg-green-50 border border-green-200 rounded-lg p-4">
                  <div class="flex items-start justify-between gap-3">
                    <div class="flex items-center gap-2 text-green-800">
                      <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                      <div>
                        <div class="text-sm font-semibold"><%= t("coupons.applied_title", default: "Coupon applied") %></div>
                        <div class="text-xs font-mono font-bold mt-0.5"><%= @cart.coupon&.code %></div>
                      </div>
                    </div>
                    <%= button_to remove_coupon_cart_path(locale: I18n.locale),
                      method: :delete,
                      class: "text-sm text-green-700 hover:text-green-900 font-medium underline transition-colors",
                      data: { turbo: false } do %>
                      <%= t("coupons.remove", default: "Remove") %>
                    <% end %>
                  </div>
                </div>
              <% else %>
                <!-- Coupon Input Form -->
                <%= form_with url: apply_coupon_cart_path(locale: I18n.locale), method: :post, class: "space-y-2", data: { turbo: false } do |f| %>
                  <label class="block text-sm font-medium text-gray-700">
                    <%= t("coupons.enter_code", default: "Enter coupon code") %>
                  </label>
                  <div class="flex gap-2">
                    <%= text_field_tag :coupon_code, "",
                      class: "flex-1 px-4 py-2.5 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-700 focus:border-gray-700 font-mono uppercase placeholder-gray-400",
                      placeholder: t("coupons.code_placeholder", default: "SUMMER2025"),
                      required: true %>
                    <%= f.submit t("coupons.apply", default: "Apply"),
                      class: "px-4 py-2.5 bg-gray-700 hover:bg-gray-800 text-white font-medium rounded-lg transition-all" %>
                  </div>
                <% end %>
              <% end %>
            </div>

            <!-- Total -->
            <div class="pt-6 border-t-2 border-gray-200">
              <div class="flex justify-between items-baseline mb-6">
                <span class="text-lg font-semibold text-gray-900"><%= t("orders.subtotal", default: "Subtotal") %></span>
                <div class="text-right">
                  <div class="text-3xl font-bold text-gray-900">
                    <%= number_to_currency(@cart.total_after_discount, unit: current_settings.default_currency) %>
                  </div>
                  <div class="text-sm text-gray-500">
                    <%= t("checkout.shipping_calculated_next", default: "Shipping calculated at checkout") %>
                  </div>
                </div>
              </div>

              <!-- Checkout Button -->
              <%= link_to checkout_path(locale: I18n.locale),
                class: "w-full bg-gray-700 hover:bg-gray-800 text-white font-semibold py-4 rounded-xl shadow-lg transition-all duration-300 hover:shadow-xl hover:scale-105 flex items-center justify-center gap-2" do %>
                <%= t("cart.checkout", default: "Proceed to Checkout") %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                </svg>
              <% end %>
            </div>

            <!-- Trust Badges -->
            <div class="pt-6 border-t border-gray-200 space-y-3">
              <div class="flex items-center gap-3 text-sm text-gray-600">
                <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
                <span><%= t("cart.secure_checkout", default: "Secure checkout with encryption") %></span>
              </div>
              <div class="flex items-center gap-3 text-sm text-gray-600">
                <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span><%= t("cart.fast_shipping", default: "Fast worldwide shipping") %></span>
              </div>
              <div class="flex items-center gap-3 text-sm text-gray-600">
                <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span><%= t("cart.authentic", default: "100% authentic products") %></span>
              </div>
            </div>
          </div>

          <!-- Payment Methods -->
          <div class="mt-6 bg-white rounded-2xl shadow-lg p-6">
            <h3 class="text-sm font-semibold text-gray-900 mb-4">
              <%= t("cart.accepted_payments", default: "We Accept") %>
            </h3>
            <div class="flex items-center gap-3 flex-wrap">
              <div class="px-4 py-2 bg-gray-100 rounded-lg text-xs font-medium text-gray-700">
                MontyPay
              </div>
              <div class="px-4 py-2 bg-gray-100 rounded-lg text-xs font-medium text-gray-700">
                Visa
              </div>
              <div class="px-4 py-2 bg-gray-100 rounded-lg text-xs font-medium text-gray-700">
                Mastercard
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Remove Item Confirmation Modal -->
  <div x-show="showRemoveModal"
       x-transition:enter="transition ease-out duration-300"
       x-transition:enter-start="opacity-0"
       x-transition:enter-end="opacity-100"
       x-transition:leave="transition ease-in duration-200"
       x-transition:leave-start="opacity-100"
       x-transition:leave-end="opacity-0"
       @click="showRemoveModal = false"
       class="fixed inset-0 z-50 bg-black/50 flex items-center justify-center p-4">
    <div @click.stop
         x-transition:enter="transition ease-out duration-300"
         x-transition:enter-start="opacity-0 scale-95"
         x-transition:enter-end="opacity-100 scale-100"
         x-transition:leave="transition ease-in duration-200"
         x-transition:leave-start="opacity-100 scale-100"
         x-transition:leave-end="opacity-0 scale-95"
         class="bg-white rounded-2xl shadow-2xl max-w-md w-full p-6">
      <!-- Modal Header -->
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-xl font-bold text-gray-900">
          <%= t("cart.confirm_remove_title", default: "Remove Item") %>
        </h3>
        <button @click="showRemoveModal = false"
                class="text-gray-400 hover:text-gray-600 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <!-- Modal Body -->
      <div class="mb-6">
        <div class="flex items-start gap-3 mb-4">
          <div class="flex-shrink-0 w-12 h-12 rounded-full bg-red-100 flex items-center justify-center">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
          </div>
          <div class="flex-1">
            <p class="text-gray-700">
              <%= t("cart.confirm_remove", default: "Are you sure you want to remove this item from your cart?") %>
            </p>
          </div>
        </div>
      </div>

      <!-- Modal Actions -->
      <div class="flex items-center gap-3">
        <button @click="showRemoveModal = false"
                class="flex-1 px-4 py-3 border-2 border-gray-300 text-gray-700 font-semibold rounded-lg hover:bg-gray-50 transition-colors">
          <%= t("common.cancel", default: "Cancel") %>
        </button>
        <%= form_with url: remove_item_cart_path(locale: I18n.locale), method: :delete, class: "flex-1", data: { turbo: true } do |f| %>
          <input type="hidden" name="cart_key" x-bind:value="itemToRemove">
          <%= f.submit t("cart.remove", default: "Remove"),
            class: "w-full px-4 py-3 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-lg transition-colors cursor-pointer" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Custom CSS Animations -->
<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.6s ease-out forwards;
  }
</style>

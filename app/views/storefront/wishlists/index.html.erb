<% content_for :full_width, true %>

<div class="min-h-screen bg-gray-50 pb-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-32 md:pt-36">
    <!-- Flash Messages -->
    <% flash.each do |key, value| %>
      <div class="mb-6 rounded-lg border-2 px-6 py-4 <%= key.to_s == 'alert' ? 'border-red-300 bg-red-50 text-red-800' : 'border-emerald-300 bg-emerald-50 text-emerald-800' %> shadow-sm">
        <div class="flex items-center gap-3">
          <% if key.to_s == 'alert' %>
            <svg class="w-5 h-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
          <% else %>
            <svg class="w-5 h-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          <% end %>
          <span class="font-medium"><%= value %></span>
        </div>
      </div>
    <% end %>

    <!-- Page Header -->
    <div class="mb-8">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-2">
        <%= t("wishlist.title") %>
      </h1>
      <p class="text-gray-600">
        <% if @wishlist_items.any? %>
          <%= @wishlist_items.count %> <%= t("wishlist.items_count") %>
        <% else %>
          <%= t("wishlist.empty_subtitle") %>
        <% end %>
      </p>
    </div>

    <% if @wishlist_items.empty? %>
      <!-- Empty Wishlist State -->
      <div class="text-center py-20 bg-white rounded-2xl shadow-lg">
        <div class="inline-block p-8 bg-gray-100 rounded-full mb-6">
          <svg class="w-24 h-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
          </svg>
        </div>
        <h3 class="text-3xl font-bold text-gray-900 mb-4">
          <%= t("wishlist.empty_title") %>
        </h3>
        <p class="text-gray-600 mb-8 text-lg">
          <%= t("wishlist.empty_message") %>
        </p>
        <%= link_to root_path(locale: I18n.locale),
          class: "inline-flex items-center px-8 py-4 bg-gray-700 hover:bg-gray-800 text-white font-semibold rounded-full shadow-lg transition-all duration-300 hover:shadow-xl hover:scale-105" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
          <%= t("wishlist.start_shopping") %>
        <% end %>
      </div>
    <% else %>
      <!-- Wishlist Items Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <% @wishlist_items.each_with_index do |item, index| %>
          <div id="<%= dom_id(item) %>"
               class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 animate-fade-in group"
               style="animation-delay: <%= index * 50 %>ms;">

            <!-- Product Image -->
            <div class="relative aspect-square overflow-hidden bg-gray-100">
              <% if item.product.primary_image&.image&.url %>
                <%= link_to product_path(item.product.slug, locale: I18n.locale) do %>
                  <%= image_tag item.product.primary_image.image.url,
                    class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" %>
                <% end %>
              <% else %>
                <div class="w-full h-full bg-gradient-to-br from-gray-200 to-gray-300 flex items-center justify-center">
                  <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                </div>
              <% end %>

              <!-- Status Badges -->
              <div class="absolute top-3 left-3 flex flex-col gap-2">
                <% if !item.in_stock? %>
                  <span class="px-3 py-1 bg-red-500 text-white text-xs font-semibold rounded-full">
                    <%= t("wishlist.out_of_stock") %>
                  </span>
                <% else %>
                  <span class="px-3 py-1 bg-green-500 text-white text-xs font-semibold rounded-full">
                    <%= t("wishlist.in_stock") %>
                  </span>
                <% end %>

                <% if item.price_dropped? %>
                  <span class="px-3 py-1 bg-amber-500 text-white text-xs font-semibold rounded-full">
                    <%= t("wishlist.price_dropped", percentage: item.price_drop_percentage) %>
                  </span>
                <% end %>
              </div>

              <!-- Remove Button -->
              <%= button_to wishlist_item_path(item, locale: I18n.locale),
                method: :delete,
                class: "absolute top-3 right-3 w-10 h-10 bg-white/90 hover:bg-red-500 rounded-full flex items-center justify-center shadow-lg transition-all duration-300 group/btn",
                data: { turbo_frame: "_top" } do %>
                <svg class="w-5 h-5 text-red-500 group-hover/btn:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                </svg>
              <% end %>
            </div>

            <!-- Product Details -->
            <div class="p-5">
              <!-- Category -->
              <p class="text-xs text-gray-500 uppercase tracking-wider mb-1">
                <%= item.product.sub_category&.name(I18n.locale) %>
              </p>

              <!-- Product Name -->
              <%= link_to product_path(item.product.slug, locale: I18n.locale) do %>
                <h3 class="text-lg font-semibold text-gray-900 mb-2 hover:text-gray-700 transition-colors line-clamp-2">
                  <%= item.product.name(I18n.locale) %>
                </h3>
              <% end %>

              <!-- Variant -->
              <% if item.product_variant %>
                <p class="text-sm text-gray-600 mb-2">
                  <%= item.product_variant.display_name %>
                </p>
              <% end %>

              <!-- Price -->
              <div class="flex items-baseline gap-2 mb-4">
                <span class="text-xl font-bold text-gray-900">
                  <%= display_price(item.current_price) %>
                </span>
                <% if item.price_dropped? %>
                  <span class="text-sm text-gray-400 line-through">
                    <%= display_price(item.price_when_added) %>
                  </span>
                <% end %>
              </div>

              <!-- Add to Cart Button -->
              <% if item.in_stock? %>
                <%= form_with url: add_item_cart_path(locale: I18n.locale), method: :post, class: "w-full" do |f| %>
                  <%= hidden_field_tag :product_id, item.product.id %>
                  <% if item.product_variant %>
                    <%= hidden_field_tag :product_variant_id, item.product_variant.id %>
                  <% end %>
                  <%= hidden_field_tag :quantity, 1 %>
                  <%= hidden_field_tag :redirect_to, wishlist_items_path(locale: I18n.locale) %>
                  <%= f.submit t("cart.add_to_cart"),
                    class: "w-full py-3 bg-gray-700 hover:bg-gray-800 text-white font-semibold rounded-lg transition-all duration-300 cursor-pointer" %>
                <% end %>
              <% else %>
                <button disabled
                        class="w-full py-3 bg-gray-300 text-gray-500 font-semibold rounded-lg cursor-not-allowed">
                  <%= t("wishlist.out_of_stock") %>
                </button>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Continue Shopping -->
      <div class="mt-10 text-center">
        <%= link_to root_path(locale: I18n.locale),
          class: "inline-flex items-center text-gray-900 hover:text-gray-700 font-medium transition-colors" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          <%= t("wishlist.continue_shopping") %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<!-- Custom CSS Animations -->
<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.6s ease-out forwards;
  }
</style>

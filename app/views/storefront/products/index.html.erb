<h1 class="text-2xl font-semibold mb-6"><%= t("products.all") %></h1>
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
  <% @products.each do |product| %>
    <div class="border rounded-lg overflow-hidden hover:shadow">
      <% if product.primary_image&.image&.url %>
        <%= image_tag product.primary_image.image.url, class: "w-full h-52 object-cover" %>
      <% else %>
        <div class="w-full h-52 bg-gray-100 flex items-center justify-center text-gray-400">No image</div>
      <% end %>
      <div class="p-4 space-y-1">
        <div class="text-sm text-gray-500"><%= product.category.name(I18n.locale) %></div>
        <h3 class="font-semibold"><%= link_to product.name, product_path(product.slug, locale: I18n.locale) %></h3>
        <div class="text-emerald-700 font-semibold"><%= number_to_currency(product.price, unit: current_settings.default_currency) %></div>
      </div>
    </div>
  <% end %>
</div>

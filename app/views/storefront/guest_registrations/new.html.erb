<% content_for :full_width, true %>

<div class="min-h-screen bg-gray-50 pb-12">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 pt-32 md:pt-36">
    <!-- Page Header -->
    <div class="mb-8 text-center">
      <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
      </div>
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">
        <%= t("guest_checkout.order_placed", default: "Order Placed Successfully!") %>
      </h1>
      <p class="text-gray-600">
        <%= t("guest_checkout.order_number", default: "Order #%{id}") % { id: @order.id } %>
      </p>
    </div>

    <!-- Create Account Card -->
    <div class="bg-white rounded-2xl shadow-xl p-8">
      <div class="text-center mb-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-2">
          <%= t("guest_checkout.create_account_title", default: "Create an Account") %>
        </h2>
        <p class="text-gray-600">
          <%= t("guest_checkout.create_account_subtitle", default: "Save your details for faster checkout next time and track all your orders.") %>
        </p>
      </div>

      <%= form_with model: @user, url: guest_registration_path(locale: I18n.locale), method: :post, data: { turbo: false } do |form| %>
        <% if @user.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-red-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <div>
                <p class="font-semibold text-red-800"><%= t("auth.errors_title", count: @user.errors.count) %></p>
                <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <div class="space-y-6">
          <!-- Email (pre-filled and readonly) -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              <%= t("checkout.email", default: "Email") %>
            </label>
            <%= form.email_field :email,
                value: @order.email,
                readonly: true,
                class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl bg-gray-50 text-gray-600" %>
            <p class="mt-1 text-xs text-gray-500">
              <%= t("guest_checkout.email_from_order", default: "Using email from your order") %>
            </p>
          </div>

          <!-- Name -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              <%= t("checkout.full_name", default: "Full Name") %> <span class="text-red-500">*</span>
            </label>
            <%= form.text_field :name,
                required: true,
                class: "w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-2 focus:ring-gray-700 focus:border-gray-700 transition-all",
                placeholder: t("checkout.name_placeholder", default: "John Doe") %>
          </div>

          <!-- Phone -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              <%= t("checkout.phone", default: "Phone Number") %>
            </label>
            <%= form.text_field :phone,
                class: "w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-2 focus:ring-gray-700 focus:border-gray-700 transition-all",
                placeholder: "+1234567890" %>
          </div>

          <!-- Password -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              <%= t("activerecord.attributes.user.password", default: "Password") %> <span class="text-red-500">*</span>
            </label>
            <%= form.password_field :password,
                required: true,
                autocomplete: "new-password",
                class: "w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-2 focus:ring-gray-700 focus:border-gray-700 transition-all",
                placeholder: "••••••••" %>
            <p class="mt-1 text-xs text-gray-500">
              <%= t("auth.min_password", default: "Minimum 6 characters") %>
            </p>
          </div>

          <!-- Password Confirmation -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">
              <%= t("activerecord.attributes.user.password_confirmation", default: "Confirm Password") %> <span class="text-red-500">*</span>
            </label>
            <%= form.password_field :password_confirmation,
                required: true,
                autocomplete: "new-password",
                class: "w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-2 focus:ring-gray-700 focus:border-gray-700 transition-all",
                placeholder: "••••••••" %>
          </div>
        </div>

        <div class="mt-8 space-y-4">
          <%= form.submit t("guest_checkout.create_account_button", default: "Create Account & Link Order"),
              class: "w-full bg-gray-700 hover:bg-gray-800 text-white font-semibold py-4 rounded-xl shadow-lg transition-all duration-300 hover:shadow-xl cursor-pointer" %>

          <%= link_to order_path(@order, locale: I18n.locale), class: "block w-full text-center py-3 text-gray-600 hover:text-gray-900 font-medium transition-colors" do %>
            <%= t("guest_checkout.skip_account", default: "No thanks, continue to my order") %>
          <% end %>
        </div>
      <% end %>

      <!-- Benefits -->
      <div class="mt-8 pt-8 border-t border-gray-200">
        <p class="text-sm font-medium text-gray-700 mb-4"><%= t("guest_checkout.benefits_title", default: "Benefits of creating an account:") %></p>
        <ul class="space-y-3">
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span class="text-sm text-gray-600"><%= t("guest_checkout.benefit_1", default: "Faster checkout with saved addresses") %></span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span class="text-sm text-gray-600"><%= t("guest_checkout.benefit_2", default: "Track all your orders in one place") %></span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span class="text-sm text-gray-600"><%= t("guest_checkout.benefit_3", default: "Save items to your wishlist") %></span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

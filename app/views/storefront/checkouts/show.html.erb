<% content_for :full_width, true %>

<script>
  window.noPostalCountries = <%= @no_postal_countries.to_json.html_safe %>;
</script>

<!-- Alpine.js State Management -->
<div x-data="{
  showOrderSummary: false,
  addressMode: '<%= @addresses.any? ? 'saved' : 'new' %>',
  selectedAddressId: '<%= @addresses.find_by(is_default: true)&.id || @addresses.first&.id %>',
  selectedCountry: '<%= @order.country %>',
  get showPostalCode() { return !window.noPostalCountries.includes(this.selectedCountry) },
  cityValue: '<%= j @order.city.to_s %>',
  cityStatus: 'idle',
  cityError: '',
  citySuggestions: [],
  cityTimer: null,
  validateCity() {
    clearTimeout(this.cityTimer);
    if (!this.cityValue || this.cityValue.length < 2 || !this.selectedCountry) {
      this.cityStatus = 'idle';
      this.cityError = '';
      this.citySuggestions = [];
      return;
    }
    this.cityStatus = 'loading';
    this.cityTimer = setTimeout(() => {
      const token = document.querySelector('meta[name=&quot;csrf-token&quot;]')?.content;
      fetch('<%= validate_city_checkout_path(locale: I18n.locale) %>', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json', 'X-CSRF-Token': token, 'Accept': 'application/json' },
        body: JSON.stringify({ country: this.selectedCountry, city: this.cityValue })
      })
      .then(r => r.json())
      .then(data => {
        if (data.valid) {
          this.cityStatus = 'valid';
          this.cityError = '';
          this.citySuggestions = [];
          if (data.postal_code && this.$refs.postalCode && !this.$refs.postalCode.value) {
            this.$refs.postalCode.value = data.postal_code;
          }
        } else {
          this.cityStatus = 'invalid';
          this.cityError = 'City not recognized by DHL';
          this.citySuggestions = data.suggestions || [];
        }
      })
      .catch(() => { this.cityStatus = 'idle'; });
    }, 600);
  },
  applySuggestion(name) {
    this.cityValue = name;
    this.$refs.cityInput.value = name;
    this.validateCity();
  }
}" class="min-h-screen bg-gray-50 pb-12">

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-32 md:pt-36">
    <!-- Page Header -->
    <div class="mb-12 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        <%= t("checkout.title", default: "Checkout") %>
      </h1>
      <p class="text-gray-600 text-lg">
        <%= t("checkout.subtitle", default: "Complete your purchase securely") %>
      </p>
    </div>

    <!-- Progress Steps -->
    <div class="mb-12">
      <div class="max-w-3xl mx-auto">
        <div class="flex items-center justify-between">
          <!-- Step 1: Information (Active) -->
          <div class="flex flex-col items-center flex-1">
            <div class="w-12 h-12 rounded-full bg-gray-900 text-white flex items-center justify-center font-semibold shadow-lg">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <span class="text-sm font-medium text-gray-900 mt-2"><%= t("checkout.step_info", default: "Information") %></span>
          </div>

          <!-- Step 2: Review & Pay (Inactive) -->
          <div class="flex flex-col items-center flex-1">
            <div class="w-12 h-12 rounded-full bg-gray-300 text-gray-600 flex items-center justify-center font-semibold">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
              </svg>
            </div>
            <span class="text-sm font-medium text-gray-600 mt-2"><%= t("checkout.step_review", default: "Review & Pay") %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Checkout Form -->
    <%= form_with url: review_checkout_path(locale: I18n.locale), method: :post, data: { turbo: false } do |form| %>
      <!-- Hidden field for selected saved address -->
      <input type="hidden" name="address_id" x-bind:value="addressMode === 'saved' ? selectedAddressId : ''" />

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

        <!-- LEFT: Shipping Information Form -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-2xl shadow-xl p-8 space-y-8">

            <% if @addresses.any? %>
              <!-- Saved Addresses Section -->
              <div>
                <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                  <div class="w-10 h-10 bg-gray-700/10 rounded-full flex items-center justify-center mr-3">
                    <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                  </div>
                  <%= t("checkout.shipping_address", default: "Shipping Address") %>
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <% @addresses.each do |addr| %>
                    <label class="cursor-pointer" @click="addressMode = 'saved'; selectedAddressId = '<%= addr.id %>'">
                      <div class="p-4 border-2 rounded-xl transition-all"
                           :class="addressMode === 'saved' && selectedAddressId === '<%= addr.id %>' ? 'border-gray-900 bg-gray-50 shadow-md' : 'border-gray-200 hover:border-gray-400'">
                        <div class="flex items-start justify-between mb-2">
                          <div class="flex items-center gap-2">
                            <div class="w-5 h-5 rounded-full border-2 flex items-center justify-center"
                                 :class="addressMode === 'saved' && selectedAddressId === '<%= addr.id %>' ? 'border-gray-900' : 'border-gray-300'">
                              <div class="w-3 h-3 rounded-full"
                                   :class="addressMode === 'saved' && selectedAddressId === '<%= addr.id %>' ? 'bg-gray-900' : ''"
                              ></div>
                            </div>
                            <span class="font-semibold text-gray-900"><%= addr.name %></span>
                          </div>
                          <% if addr.label.present? %>
                            <span class="text-xs bg-gray-100 text-gray-600 px-2 py-0.5 rounded-full"><%= addr.label %></span>
                          <% end %>
                        </div>
                        <div class="ml-7 text-sm text-gray-600 space-y-0.5">
                          <div><%= addr.street_address %></div>
                          <% if addr.building.present? %>
                            <div><%= addr.building %></div>
                          <% end %>
                          <div><%= [addr.city, addr.postal_code].compact_blank.join(", ") %></div>
                          <div><%= addr.country %></div>
                          <div class="text-gray-500"><%= addr.phone %></div>
                        </div>
                        <% if addr.is_default? %>
                          <div class="ml-7 mt-2">
                            <span class="text-xs bg-green-100 text-green-700 px-2 py-0.5 rounded-full"><%= t("checkout.default_address", default: "Default") %></span>
                          </div>
                        <% end %>
                      </div>
                    </label>
                  <% end %>

                  <!-- Add New Address Card -->
                  <label class="cursor-pointer" @click="addressMode = 'new'">
                    <div class="p-4 border-2 border-dashed rounded-xl transition-all h-full flex items-center justify-center min-h-[120px]"
                         :class="addressMode === 'new' ? 'border-gray-900 bg-gray-50' : 'border-gray-300 hover:border-gray-400'">
                      <div class="text-center">
                        <div class="flex items-center justify-center gap-2 mb-1">
                          <div class="w-5 h-5 rounded-full border-2 flex items-center justify-center"
                               :class="addressMode === 'new' ? 'border-gray-900' : 'border-gray-300'">
                            <div class="w-3 h-3 rounded-full"
                                 :class="addressMode === 'new' ? 'bg-gray-900' : ''"
                            ></div>
                          </div>
                          <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                          </svg>
                        </div>
                        <span class="text-sm font-medium text-gray-700"><%= t("checkout.add_new_address", default: "Add new address") %></span>
                      </div>
                    </div>
                  </label>
                </div>
              </div>
            <% end %>

            <!-- New Address Form -->
            <div x-show="addressMode === 'new'" x-cloak>
              <% unless @addresses.any? %>
                <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                  <div class="w-10 h-10 bg-gray-700/10 rounded-full flex items-center justify-center mr-3">
                    <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                  </div>
                  <%= t("checkout.shipping_address", default: "Shipping Address") %>
                </h2>
              <% end %>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="md:col-span-2">
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    <%= t("checkout.full_name", default: "Full Name") %> <span class="text-red-500">*</span>
                  </label>
                  <input type="text" name="order[name]" value="<%= @order.name %>" required
                    class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-2 focus:ring-gray-700 focus:border-gray-700 transition-all"
                    placeholder="<%= t("checkout.name_placeholder", default: "John Doe") %>" />
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    <%= t("checkout.phone", default: "Phone Number") %> <span class="text-red-500">*</span>
                  </label>
                  <input type="text" name="order[phone]" value="<%= @order.phone %>" required
                    class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-2 focus:ring-gray-700 focus:border-gray-700 transition-all"
                    placeholder="+1234567890" />
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    <%= t("checkout.country", default: "Country") %> <span class="text-red-500">*</span>
                  </label>
                  <%= country_select "order", "country",
                    { priority_countries: [current_settings.local_country], except: %w[IL IR CU RU KP], selected: @order.country },
                    { required: true,
                      "x-model": "selectedCountry",
                      "@change": "validateCity()",
                      class: "w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-2 focus:ring-gray-700 focus:border-gray-700 transition-all" } %>
                </div>

                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    <%= t("checkout.city", default: "City") %> <span class="text-red-500">*</span>
                  </label>
                  <div class="relative">
                    <input type="text" name="order[city]"
                      x-model="cityValue" x-ref="cityInput"
                      @input="validateCity()" @change="validateCity()"
                      required
                      class="w-full px-4 py-3 border-2 rounded-xl focus:ring-2 focus:ring-gray-700 transition-all pr-10"
                      :class="{
                        'border-green-500': cityStatus === 'valid',
                        'border-red-400': cityStatus === 'invalid',
                        'border-gray-300': cityStatus === 'idle' || cityStatus === 'loading'
                      }"
                      placeholder="<%= t("checkout.city_placeholder", default: "New York") %>" />
                    <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                      <template x-if="cityStatus === 'loading'">
                        <svg class="animate-spin h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
                        </svg>
                      </template>
                      <template x-if="cityStatus === 'valid'">
                        <svg class="h-5 w-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                      </template>
                      <template x-if="cityStatus === 'invalid'">
                        <svg class="h-5 w-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4.5c-.77-.833-2.694-.833-3.464 0L3.34 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                        </svg>
                      </template>
                    </div>
                  </div>
                  <p x-show="cityStatus === 'invalid'" x-cloak class="mt-1 text-sm text-red-600" x-text="cityError"></p>
                  <div x-show="citySuggestions.length > 0" x-cloak class="mt-2">
                    <p class="text-xs text-gray-500 mb-1"><%= t("checkout.did_you_mean", default: "Did you mean:") %></p>
                    <div class="flex flex-wrap gap-2">
                      <template x-for="s in citySuggestions" :key="s">
                        <button type="button" @click="applySuggestion(s)"
                          class="text-xs px-3 py-1 bg-blue-50 text-blue-700 rounded-full hover:bg-blue-100 cursor-pointer"
                          x-text="s"></button>
                      </template>
                    </div>
                  </div>
                </div>

                <div x-show="showPostalCode" x-cloak>
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    <%= t("checkout.postal_code", default: "Postal Code") %>
                  </label>
                  <input type="text" name="order[postal_code]" value="<%= @order.postal_code %>"
                    x-ref="postalCode"
                    x-bind:disabled="!showPostalCode"
                    class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-2 focus:ring-gray-700 focus:border-gray-700 transition-all"
                    placeholder="<%= t("checkout.postal_code_placeholder", default: "10001") %>" />
                </div>

                <div class="md:col-span-2">
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    <%= t("checkout.street_address", default: "Street Address") %> <span class="text-red-500">*</span>
                  </label>
                  <input type="text" name="order[street_address]" value="<%= @order.street_address %>" required
                    class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-2 focus:ring-gray-700 focus:border-gray-700 transition-all"
                    placeholder="<%= t("checkout.street_placeholder", default: "123 Main Street") %>" />
                </div>

                <div class="md:col-span-2">
                  <label class="block text-sm font-medium text-gray-700 mb-2">
                    <%= t("checkout.building", default: "Building / Apt / Suite") %>
                  </label>
                  <input type="text" name="order[building]" value="<%= @order.building %>"
                    class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-2 focus:ring-gray-700 focus:border-gray-700 transition-all"
                    placeholder="<%= t("checkout.building_placeholder", default: "Apt 4B, Floor 2") %>" />
                </div>
              </div>

              <!-- Save Address Checkbox -->
              <div class="mt-4 flex items-center gap-2">
                <input type="checkbox" name="save_address" value="1" checked id="save_address_checkbox"
                  class="w-4 h-4 text-gray-700 border-gray-300 rounded focus:ring-gray-700" />
                <label for="save_address_checkbox" class="text-sm text-gray-600">
                  <%= t("checkout.save_address", default: "Save this address for future orders") %>
                </label>
              </div>
            </div>

            <!-- Contact Section (always shown) -->
            <div class="pt-8 border-t border-gray-200">
              <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                <div class="w-10 h-10 bg-gray-700/10 rounded-full flex items-center justify-center mr-3">
                  <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <%= t("checkout.contact_info", default: "Contact Information") %>
              </h2>

              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  <%= t("checkout.email", default: "Email") %> <span class="text-red-500">*</span>
                </label>
                <input type="email" name="order[email]" value="<%= @order.email %>" required
                  class="w-full px-4 py-3 border-2 border-gray-300 rounded-xl focus:ring-2 focus:ring-gray-700 focus:border-gray-700 transition-all"
                  placeholder="john@example.com" />
              </div>
            </div>
          </div>
        </div>

        <!-- RIGHT: Order Summary -->
        <div class="lg:sticky lg:top-24 lg:self-start">
          <div class="bg-white rounded-2xl shadow-xl p-8 space-y-6">
            <div class="flex items-center justify-between">
              <h2 class="text-2xl font-bold text-gray-900">
                <%= t("cart.summary", default: "Order Summary") %>
              </h2>
              <button type="button"
                      @click="showOrderSummary = !showOrderSummary"
                      class="lg:hidden text-gray-700 hover:text-gray-900">
                <svg class="w-6 h-6" :class="showOrderSummary ? 'rotate-180' : ''" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </button>
            </div>

            <div :class="showOrderSummary ? 'block' : 'hidden lg:block'" class="space-y-6">
              <!-- Cart Items -->
              <div class="space-y-4 pb-6 border-b border-gray-200">
                <% @cart.items.each do |item| %>
                  <div class="flex gap-4">
                    <div class="relative flex-shrink-0">
                      <% if item.product.primary_image&.image&.url %>
                        <div class="w-16 h-16 rounded-lg overflow-hidden bg-gray-100">
                          <%= image_tag item.product.primary_image.image.url, class: "w-full h-full object-cover" %>
                        </div>
                        <div class="absolute -top-2 -right-2 w-6 h-6 bg-gray-700 text-white rounded-full flex items-center justify-center text-xs font-semibold">
                          <%= item.quantity %>
                        </div>
                      <% end %>
                    </div>
                    <div class="flex-1 min-w-0">
                      <h4 class="text-sm font-semibold text-gray-900 line-clamp-2">
                        <%= item.product.name(I18n.locale) %>
                      </h4>
                      <p class="text-xs text-gray-600 mt-1">
                        <%= item.product.category.name(I18n.locale) %>
                      </p>
                    </div>
                    <div class="text-right">
                      <div class="font-semibold text-gray-900">
                        <%= display_price(item.line_total) %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>

              <!-- Price Breakdown -->
              <div class="space-y-3">
                <div class="flex justify-between text-gray-600">
                  <span><%= t("orders.subtotal", default: "Subtotal") %></span>
                  <span class="font-semibold text-gray-900">
                    <%= display_price(@cart.subtotal) %>
                  </span>
                </div>

                <div class="flex justify-between text-gray-600">
                  <span class="flex items-center gap-2">
                    <%= t("orders.shipping", default: "Shipping") %>
                    <span class="text-xs bg-green-100 text-green-700 px-2 py-1 rounded-full">DHL</span>
                  </span>
                  <span class="font-semibold text-gray-500 text-sm">
                    <%= t("checkout.calculated_next_step", default: "Calculated next step") %>
                  </span>
                </div>

                <!-- Discount (if coupon applied) -->
                <% if @cart.has_coupon? && @cart.discount_amount > 0 %>
                  <div class="flex justify-between text-green-600">
                    <span class="flex items-center gap-2">
                      <%= t("coupons.discount", default: "Discount") %>
                      <span class="text-xs font-mono font-bold"><%= @cart.coupon&.code %></span>
                    </span>
                    <span class="font-semibold">
                      -<%= display_price(@cart.discount_amount) %>
                    </span>
                  </div>
                <% end %>
              </div>

              <!-- Total -->
              <div class="pt-6 border-t-2 border-gray-200">
                <div class="flex justify-between items-baseline mb-6">
                  <span class="text-lg font-semibold text-gray-900"><%= t("orders.subtotal", default: "Subtotal") %></span>
                  <div class="text-right">
                    <div class="text-3xl font-bold text-gray-700">
                      <%= display_price(@cart.total_after_discount) %>
                    </div>
                    <div class="text-sm text-gray-500">
                      <%= t("checkout.shipping_added_next", default: "Shipping added in next step") %>
                    </div>
                  </div>
                </div>

                <!-- Continue to Payment Button -->
                <button type="submit"
                  class="w-full bg-gray-700 hover:bg-gray-800 text-white font-semibold py-4 rounded-xl shadow-lg transition-all duration-300 hover:shadow-xl hover:scale-105 flex items-center justify-center gap-2 cursor-pointer">
                  <%= t("checkout.continue_to_payment", default: "Continue to Payment") %>
                </button>
              </div>

              <!-- Security Badge -->
              <div class="pt-6 border-t border-gray-200">
                <div class="flex items-center justify-center gap-2 text-sm text-gray-600">
                  <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                  </svg>
                  <%= t("checkout.secure_checkout", default: "Secure encrypted checkout") %>
                </div>
              </div>
            </div>
          </div>

          <!-- Trust Signals -->
          <div class="mt-6 bg-white rounded-2xl shadow-lg p-6 space-y-4">
            <div class="flex items-start gap-3">
              <svg class="w-6 h-6 text-gray-700 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
              <div>
                <h4 class="font-semibold text-gray-900 text-sm"><%= t("checkout.authentic", default: "100% Authentic") %></h4>
                <p class="text-xs text-gray-600"><%= t("checkout.authentic_desc", default: "Certified genuine jewelry") %></p>
              </div>

<% content_for :full_width, true %>

<!-- Alpine.js State Management -->
<div x-data="{
  currentSlide: 0,
  autoplay: true,
  hoveredProduct: null,
  scrollY: 0,
  init() {
    setInterval(() => {
      if (this.autoplay) {
        this.currentSlide = (this.currentSlide + 1) % <%= @banners.any? ? @banners.length : 1 %>;
      }
    }, 5000);
    window.addEventListener('scroll', () => {
      this.scrollY = window.scrollY;
    });
  }
}" class="overflow-hidden">

  <!-- Hero Banner Section -->
  <section id="hero-banner" class="relative overflow-hidden pt-32 md:pt-36 h-screen">
    <% if @banners.any? %>
      <% @banners.each_with_index do |banner, index| %>
        <div x-show="currentSlide === <%= index %>"
             x-transition:enter="transition-all ease-out duration-1000"
             x-transition:enter-start="opacity-0"
             x-transition:enter-end="opacity-100"
             x-transition:leave="transition-all ease-in duration-500"
             x-transition:leave-start="opacity-100"
             x-transition:leave-end="opacity-0"
             class="absolute inset-0">
          <!-- Background Image -->
          <div class="absolute inset-0 bg-cover bg-center"
               style="background-image: url(<%= banner.image.url %>);">
            <div class="absolute inset-0 bg-gradient-to-b from-black/30 via-transparent to-black/50"></div>
          </div>

          <!-- Hero Content - Left Aligned with Background -->
          <div class="relative h-full flex items-center px-4 sm:px-6 lg:px-8">
            <div class="max-w-7xl mx-auto w-full">
              <div x-show="currentSlide === <%= index %>"
                   x-transition:enter="transition-all ease-out duration-1000 delay-300"
                   x-transition:enter-start="opacity-0 transform translate-x-[-20px]"
                   x-transition:enter-end="opacity-100 transform translate-x-0"
                   class="space-y-4 max-w-2xl">
                <div class="w-fit">
                  <h1 class="bg-gray-900/80 backdrop-blur-sm px-6 py-4 text-4xl md:text-5xl lg:text-6xl font-serif text-white">
                    <%= banner.title(I18n.locale) %>
                  </h1>
                </div>
                <div class="w-fit">
                  <p class="bg-gray-900/80 backdrop-blur-sm px-6 py-4 text-base md:text-lg text-white">
                    <%= banner.subtitle(I18n.locale) %>
                  </p>
                </div>
                <%
                  button_url = if banner.product.present?
                    product_path(banner.product.slug, locale: I18n.locale)
                  elsif banner.url.present?
                    banner.url
                  else
                    root_path(locale: I18n.locale)
                  end
                %>
                <%= link_to button_url, class: "inline-flex items-center px-8 py-3 bg-white hover:bg-gray-100 text-gray-900 font-medium uppercase text-sm tracking-wide transition-all duration-300" do %>
                  <%= t("common.shop_now", default: "Shop Now") %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <!-- Static Fallback Banner -->
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-gray-700 to-gray-500">
          <div class="absolute inset-0 bg-gradient-to-b from-black/30 via-transparent to-black/50"></div>
        </div>
        <div class="relative h-full flex items-center px-4 sm:px-6 lg:px-8">
          <div class="max-w-7xl mx-auto w-full">
            <div class="space-y-4 max-w-2xl">
              <div class="w-fit">
                <h1 class="bg-gray-900/80 backdrop-blur-sm px-6 py-4 text-4xl md:text-5xl lg:text-6xl font-serif text-white">
                  <%= t("brand.name", default: "Milanccelos") %>
                </h1>
              </div>
              <div class="w-fit">
                <p class="bg-gray-900/80 backdrop-blur-sm px-6 py-4 text-base md:text-lg text-white">
                  <%= t("brand.tagline", default: "Discover unique jewelry that celebrates your style") %>
                </p>
              </div>
              <%= link_to root_path(locale: I18n.locale), class: "inline-flex items-center px-8 py-3 bg-white hover:bg-gray-100 text-gray-900 font-medium uppercase text-sm tracking-wide transition-all duration-300" do %>
                <%= t("common.shop_now", default: "Shop Now") %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Quick Access Buttons - Bottom Right -->
   
    <!-- Banner Navigation Dots -->
    <% if @banners.any? && @banners.length > 1 %>
      <div class="absolute bottom-12 left-1/2 transform -translate-x-1/2 flex gap-2 z-10">
        <% @banners.each_with_index do |_, index| %>
          <button @click="currentSlide = <%= index %>; autoplay = false"
                  class="w-2 h-2 rounded-full bg-white/50 hover:bg-white transition-all duration-300"
                  :class="currentSlide === <%= index %> ? 'bg-white' : ''">
          </button>
        <% end %>
      </div>
    <% end %>
  </section>

  <!-- Top Product Section -->
  <section class="w-full py-16 bg-white" x-data="{ selectedCategory: <%= @categories.first&.id || 'null' %> }">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Section Header with Tabs -->
      <div class="flex items-center justify-between mb-12">
        <h2 class="text-3xl font-serif text-gray-700">
          <%= t("storefront.home.top_product", default: "Top Product") %>
        </h2>
        <div class="flex gap-6 text-sm overflow-x-auto">
          <% @categories.take(6).each do |category| %>
            <button @click="selectedCategory = <%= category.id %>"
                    :class="selectedCategory === <%= category.id %> ? 'text-gray-700 underline font-medium' : 'text-gray-400 hover:text-gray-700'"
                    class="whitespace-nowrap">
              <%= category.name(I18n.locale) %>
            </button>
          <% end %>
        </div>
      </div>

      <!-- Product Grid -->
      <% @categories.take(6).each do |category| %>
        <div x-show="selectedCategory === <%= category.id %>"
             x-transition:enter="transition ease-out duration-300"
             x-transition:enter-start="opacity-0 transform translate-x-4"
             x-transition:enter-end="opacity-100 transform translate-x-0"
             x-transition:leave="transition ease-in duration-200"
             x-transition:leave-start="opacity-100"
             x-transition:leave-end="opacity-0"
             class="grid grid-cols-2 md:grid-cols-4 gap-6">
          <% (@category_products[category.id] || []).take(4).each do |product| %>
            <div class="group">
              <!-- Product Image -->
              <div class="relative aspect-square bg-gray-50 mb-4 overflow-hidden">
                <% if product.primary_image %>
                  <%= link_to product_path(product.slug, locale: I18n.locale) do %>
                    <%= image_tag product.primary_image.image.url,
                      class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" %>
                  <% end %>
                <% else %>
                  <div class="w-full h-full bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center">
                    <svg class="w-16 h-16 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                  </div>
                <% end %>
              </div>

              <!-- Product Info -->
              <div class="text-center">
                <%= link_to product_path(product.slug, locale: I18n.locale) do %>
                  <h3 class="text-sm font-medium text-gray-900 mb-2">
                    <%= product.name(I18n.locale) %>
                  </h3>
                <% end %>
                <%= link_to product_path(product.slug, locale: I18n.locale),
                  class: "text-xs text-gray-700 underline hover:text-gray-900" do %>
                  <%= t("common.shop_now", default: "Shop Now") %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>

  <!-- New Arrivals Section -->
  <section class="w-full py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Section Header -->
      <div class="text-center mb-12">

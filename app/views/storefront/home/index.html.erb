              <div class="relative aspect-square bg-gray-50 overflow-hidden">
                <% if product.primary_image %>
                  <%= link_to product_path(product.slug, locale: I18n.locale) do %>
                    <%= image_tag product.primary_image.image.url,
                      class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" %>
                  <% end %>
                <% else %>
                  <div class="w-full h-full bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center">
                    <svg class="w-20 h-20 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                  </div>
                <% end %>
              </div>

              <!-- Product Info -->
              <div class="p-6">
                <div class="flex items-start justify-between mb-2">
                  <div class="flex-1">
                    <%= link_to product_path(product.slug, locale: I18n.locale) do %>
                      <h3 class="text-base font-medium text-gray-900 mb-1 hover:text-gray-700">
                        <%= product.name(I18n.locale) %>
                      </h3>
                    <% end %>
                    <div class="flex items-center gap-2">
                      <span class="text-lg font-bold text-gray-900">
                        <%= number_to_currency(product.price, unit: current_settings.default_currency) %>
                      </span>
                    </div>
                  </div>
                  <%= link_to add_item_cart_path(locale: I18n.locale, product_id: product.id),
                    method: :post,
                    class: "text-gray-700 hover:text-gray-900" do %>
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                    </svg>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- View All Button -->
        <div class="text-center">
          <%= link_to root_path(locale: I18n.locale),
            class: "inline-flex items-center px-8 py-3 border-2 border-gray-700 text-gray-700 hover:bg-gray-700 hover:text-white font-medium uppercase text-sm tracking-wide transition-all duration-300" do %>
            <%= t("common.view_all", default: "View All") %>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>

  <!-- Featured Products Section (Auto-scrollable) -->
  <% if @scrolling_featured_products.any? %>
    <section class="w-full py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-serif text-gray-700 text-center mb-12">
          <%= t("storefront.home.featured_products", default: "Featured Products") %>
        </h2>

        <!-- Auto-scrollable Container -->
        <div class="relative overflow-hidden">
          <div class="flex gap-6 animate-scroll-horizontal">

              <!-- Product Image -->
              <div class="relative aspect-square bg-gray-50 overflow-hidden">
                <% if sale_product.on_sale && sale_product.sale_price.present? %>
                  <span class="absolute top-4 left-4 bg-gray-700 text-white text-xs font-medium px-3 py-2 rounded z-10">
                    <%= t("common.sale_up_to", default: "SALE UP TO") %> <%= number_to_percentage((sale_product.price - sale_product.sale_price) / sale_product.price * 100, precision: 0) %> <%= t("common.off", default: "OFF") %>
                  </span>
                <% end %>
                <% if sale_product.primary_image %>
                  <%= link_to product_path(sale_product.slug, locale: I18n.locale) do %>
                    <%= image_tag sale_product.primary_image.image.url,
                      class: "w-full h-full object-cover hover:scale-110 transition-transform duration-700" %>
                  <% end %>
                <% else %>
                  <div class="w-full h-full bg-gradient-to-br from-gray-200 to-gray-300 flex items-center justify-center">
                    <svg class="w-24 h-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>

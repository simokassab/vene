      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-serif text-gray-700 text-center mb-12">
          <%= t("storefront.home.must_have", default: "Must Have") %>
        </h2>


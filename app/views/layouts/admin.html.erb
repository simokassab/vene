<!DOCTYPE html>
<html lang="<%= I18n.locale %>" dir="<%= I18n.locale == :ar ? 'rtl' : 'ltr' %>">
<head>
  <title>Admin - VENE Jewelry</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>
<body class="bg-gray-50 text-gray-900 antialiased" x-data="{ mobileMenu: false, userMenu: false }">
  <div class="flex min-h-screen">
    <!-- Sidebar -->
    <aside class="w-64 bg-gradient-to-b from-[#1C2434] to-[#1A1F2E] text-white hidden lg:flex lg:flex-col fixed h-full z-40">
      <!-- Logo -->
      <div class="h-16 flex items-center px-6 border-b border-white/10">
        <h1 class="text-xl font-bold tracking-wide bg-gradient-to-r from-white to-gray-300 bg-clip-text text-transparent">
          VENÃˆ Admin
        </h1>
      </div>

      <!-- Navigation -->
      <nav class="flex-1 px-4 py-6 space-y-1 overflow-y-auto">
        <%
          current_path = request.path
          nav_items = [
            { name: t("admin.nav.dashboard"), path: admin_root_path(locale: I18n.locale), icon: 'ðŸ“Š' },
            { name: t("admin.nav.products"), path: admin_products_path(locale: I18n.locale), icon: 'ðŸ“¦' },
            { name: t("admin.nav.categories"), path: admin_categories_path(locale: I18n.locale), icon: 'ðŸ·ï¸' },
            { name: t("admin.nav.variant_types", default: "Variant Types"), path: admin_variant_types_path(locale: I18n.locale), icon: 'ðŸ”§' },
            { name: t("admin.nav.orders"), path: admin_orders_path(locale: I18n.locale), icon: 'ðŸ›’' },
            { name: t("admin.nav.banners"), path: admin_banners_path(locale: I18n.locale), icon: 'ðŸ–¼ï¸' },
            { name: t("admin.nav.pages"), path: admin_pages_path(locale: I18n.locale), icon: 'ðŸ“„' },
            { name: t("admin.nav.settings"), path: admin_setting_path(locale: I18n.locale), icon: 'âš™ï¸' }
          ]
        %>
        <% nav_items.each do |item| %>
          <% is_active = current_path.start_with?(item[:path]) %>
          <%= link_to item[:path], class: "group flex items-center px-4 py-3 text-sm font-medium rounded-lg transition-all duration-200 #{is_active ? 'bg-[#465FFF] text-white shadow-lg shadow-blue-500/30' : 'text-gray-300 hover:bg-white/10 hover:text-white'}" do %>
            <span class="text-lg mr-3"><%= item[:icon] %></span>
            <span><%= item[:name] %></span>
            <% if is_active %>
              <span class="ml-auto">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                </svg>
              </span>
            <% end %>
          <% end %>
        <% end %>
      </nav>

      <!-- Sidebar Footer -->
      <div class="p-4 border-t border-white/10">
        <div class="px-4 py-3 bg-white/5 rounded-lg">
          <p class="text-xs text-gray-400">Version 1.0.0</p>
          <p class="text-xs text-gray-500 mt-1">Â© 2025 VENÃˆ Jewelry</p>
        </div>
      </div>
    </aside>

    <!-- Mobile Sidebar Overlay -->
    <div
      x-show="mobileMenu"
      @click="mobileMenu = false"
      class="fixed inset-0 bg-black bg-opacity-50 z-30 lg:hidden"
      x-transition:enter="transition-opacity ease-linear duration-300"
      x-transition:enter-start="opacity-0"
      x-transition:enter-end="opacity-100"
      x-transition:leave="transition-opacity ease-linear duration-300"
      x-transition:leave-start="opacity-100"
      x-transition:leave-end="opacity-0"
      style="display: none;"
    ></div>

    <!-- Mobile Sidebar -->
    <aside
      x-show="mobileMenu"
      class="fixed inset-y-0 left-0 w-64 bg-gradient-to-b from-[#1C2434] to-[#1A1F2E] text-white z-40 lg:hidden transform transition-transform duration-300 ease-in-out"
      x-transition:enter="transition-transform ease-out duration-300"
      x-transition:enter-start="-translate-x-full"
      x-transition:enter-end="translate-x-0"
      x-transition:leave="transition-transform ease-in duration-300"
      x-transition:leave-start="translate-x-0"
      x-transition:leave-end="-translate-x-full"
      style="display: none;"
    >
      <div class="h-16 flex items-center justify-between px-6 border-b border-white/10">
        <h1 class="text-xl font-bold">VENE Admin</h1>
        <button @click="mobileMenu = false" class="text-gray-300 hover:text-white">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      <nav class="px-4 py-6 space-y-1">
        <% nav_items.each do |item| %>
          <% is_active = current_path.start_with?(item[:path]) %>
          <%= link_to item[:path], class: "group flex items-center px-4 py-3 text-sm font-medium rounded-lg transition-all duration-200 #{is_active ? 'bg-[#465FFF] text-white' : 'text-gray-300 hover:bg-white/10 hover:text-white'}" do %>
            <span class="text-lg mr-3"><%= item[:icon] %></span>
            <span><%= item[:name] %></span>
          <% end %>
        <% end %>
      </nav>
    </aside>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col lg:ml-64">
      <!-- Header -->
      <header class="sticky top-0 z-20 bg-white border-b border-gray-200 shadow-sm">
        <div class="flex items-center justify-between px-4 lg:px-6 h-16">
          <!-- Left: Mobile menu + Title -->
          <div class="flex items-center space-x-4">
            <button
              @click="mobileMenu = !mobileMenu"
              class="lg:hidden p-2 rounded-lg text-gray-500 hover:bg-gray-100 hover:text-gray-900 transition-colors"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
              </svg>
            </button>
            <h2 class="text-lg font-semibold text-gray-800 hidden sm:block">VENÃˆ Jewelry</h2>
          </div>

          <!-- Right: Language + User Menu -->
          <div class="flex items-center space-x-4">
            <!-- Language Switcher -->
            <div class="flex items-center space-x-1 px-3 py-1.5 bg-gray-100 rounded-lg">
              <%= link_to "EN", url_for(locale: :en), class: "px-2 py-1 text-xs font-medium rounded transition-colors #{I18n.locale == :en ? 'bg-[#465FFF] text-white' : 'text-gray-600 hover:text-gray-900'}" %>
              <%= link_to "AR", url_for(locale: :ar), class: "px-2 py-1 text-xs font-medium rounded transition-colors #{I18n.locale == :ar ? 'bg-[#465FFF] text-white' : 'text-gray-600 hover:text-gray-900'}" %>
            </div>

            <!-- User Menu -->
            <% if user_signed_in? %>
              <div class="relative" x-data="{ open: false }">
                <button
                  @click="open = !open"
                  class="flex items-center space-x-2 px-3 py-2 rounded-lg hover:bg-gray-100 transition-colors"
                >
                  <div class="w-8 h-8 bg-gradient-to-br from-[#465FFF] to-[#3651E6] rounded-full flex items-center justify-center text-white text-sm font-medium">
                    <%= current_user.email[0].upcase %>
                  </div>
                  <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                  </svg>
                </button>

                <!-- Dropdown -->
                <div
                  x-show="open"
                  @click.away="open = false"
                  class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-1"
                  style="display: none;"
                >
                  <div class="px-4 py-3 border-b border-gray-100">
                    <p class="text-sm font-medium text-gray-900">Admin User</p>
                    <p class="text-xs text-gray-500 mt-0.5 truncate"><%= current_user.email %></p>
                  </div>
                  <%= link_to destroy_user_session_path(locale: I18n.locale), data: { turbo_method: :delete }, class: "flex items-center px-4 py-2 text-sm text-red-600 hover:bg-red-50 transition-colors" do %>
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                    </svg>
                    <%= t("nav.logout") %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </header>

      <!-- Page Content -->
      <main class="flex-1 p-4 lg:p-6">
        <!-- Flash Messages -->
        <% flash.each do |key, value| %>
          <div class="mb-6 rounded-lg border-l-4 px-4 py-3 shadow-sm <%= key.to_s == 'alert' ? 'border-red-500 bg-red-50 text-red-800' : 'border-emerald-500 bg-emerald-50 text-emerald-800' %>">
            <div class="flex items-center">
              <% if key.to_s == 'alert' %>
                <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              <% else %>
                <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
              <% end %>
              <span class="font-medium"><%= value %></span>
            </div>
          </div>
        <% end %>

        <%= yield %>
      </main>
    </div>
  </div>

  <!-- Toast Notification -->
  <%= render 'admin/shared/toast' %>
</body>
</html>

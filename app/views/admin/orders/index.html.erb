<!-- Page Header -->
<div class="mb-6">
  <h1 class="text-2xl font-bold text-gray-900"><%= t("admin.orders.title") %></h1>
  <p class="mt-1 text-sm text-gray-600"><%= t("admin.orders.subtitle", default: "Manage and track customer orders") %></p>
</div>

<!-- Orders Table -->
<div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("admin.orders.order_number", default: "Order") %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("admin.orders.customer") %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("admin.orders.status") %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("admin.orders.payment", default: "Payment") %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("admin.orders.total") %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("admin.orders.date", default: "Date") %>
          </th>
          <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("common.actions", default: "Actions") %>
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% if @orders.any? %>
          <% @orders.each do |order| %>
            <tr class="hover:bg-gray-50 transition-colors">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">#<%= order.id %></div>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm font-medium text-gray-900"><%= order.name %></div>
                <div class="text-xs text-gray-500"><%= order.email %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%
                  status_type = case order.status
                  when 'pending' then 'warning'
                  when 'processing' then 'info'
                  when 'completed' then 'success'
                  when 'cancelled' then 'danger'
                  else 'default'
                  end
                %>
                <%= render 'admin/shared/badge', text: order.status.capitalize, type: status_type %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%
                  payment_type = case order.payment_status
                  when 'paid' then 'success'
                  when 'pending' then 'warning'
                  when 'failed' then 'danger'
                  else 'default'
                  end
                %>
                <%= render 'admin/shared/badge', text: order.payment_status.capitalize, type: payment_type, size: 'sm' %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-semibold text-gray-900"><%= number_to_currency(order.total_amount) %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-500"><%= order.created_at.strftime('%b %d, %Y') %></div>
                <div class="text-xs text-gray-400"><%= order.created_at.strftime('%I:%M %p') %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                <%= link_to admin_order_path(order, locale: I18n.locale), class: "inline-flex items-center text-[#465FFF] hover:text-[#3651E6] font-medium transition-colors" do %>
                  <%= t("admin.actions.view") %>
                  <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="7" class="px-6 py-12 text-center">
              <div class="text-gray-400">
                <svg class="mx-auto h-12 w-12 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                </svg>
                <p class="text-sm font-medium"><%= t("admin.orders.no_orders", default: "No orders yet") %></p>
                <p class="mt-1 text-xs text-gray-500"><%= t("admin.orders.no_orders_subtitle", default: "Orders will appear here once customers make purchases") %></p>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

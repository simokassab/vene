<!-- Page Header -->
<div class="mb-8">
  <div class="flex items-center justify-between mb-2">
    <%= link_to admin_orders_path(locale: I18n.locale), class: "inline-flex items-center text-gray-600 hover:text-gray-900 transition-colors" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      <%= t("common.back", default: "Back to Orders") %>
    <% end %>
  </div>

  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 flex items-center gap-3">
        <%= t("admin.orders.details", default: "Order Details") %>
        <span class="text-2xl text-gray-400">#<%= @order.id %></span>
      </h1>
      <p class="text-sm text-gray-500 mt-1">
        <%= t("admin.orders.placed_on", default: "Placed on") %> <%= @order.created_at.strftime("%B %d, %Y at %I:%M %p") %>
      </p>
    </div>

    <div class="flex items-center gap-3">
      <%= link_to invoice_admin_order_path(@order, locale: I18n.locale),
        class: "inline-flex items-center px-4 py-2.5 bg-white border-2 border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-all shadow-sm" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
        </svg>
        <%= t("admin.orders.invoice", default: "Invoice") %>
      <% end %>

      <%= link_to edit_admin_order_path(@order, locale: I18n.locale),
        class: "inline-flex items-center px-4 py-2.5 bg-[#465FFF] text-white font-medium rounded-lg hover:bg-[#3651E6] transition-all shadow-sm" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        <%= t("admin.actions.edit", default: "Edit Order") %>
      <% end %>
    </div>
  </div>
</div>

<!-- Status Cards -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
  <!-- Order Status -->
  <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide">
        <%= t("admin.orders.order_status", default: "Order Status") %>
      </h3>
      <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
      </svg>
    </div>
    <div class="mb-4">
      <% status_colors = {
        'pending' => 'bg-yellow-100 text-yellow-800 border-yellow-200',
        'processing' => 'bg-blue-100 text-blue-800 border-blue-200',
        'shipped' => 'bg-purple-100 text-purple-800 border-purple-200',
        'delivered' => 'bg-green-100 text-green-800 border-green-200',
        'cancelled' => 'bg-red-100 text-red-800 border-red-200'
      } %>
      <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-semibold border-2 <%= status_colors[@order.status] || 'bg-gray-100 text-gray-800 border-gray-200' %>">
        <%= @order.status.titleize %>
      </span>
    </div>
    <%= button_to update_status_admin_order_path(@order, locale: I18n.locale, status: :shipped),
      method: :patch,
      form: { data: { turbo_confirm: t("admin.actions.confirm", default: "Are you sure?") } },
      class: "w-full inline-flex items-center justify-center px-4 py-2.5 bg-purple-600 hover:bg-purple-700 text-white font-medium rounded-lg transition-all" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
      </svg>
      <%= t("admin.orders.mark_shipped", default: "Mark as Shipped") %>
    <% end %>
  </div>

  <!-- Payment Status -->
  <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide">
        <%= t("admin.orders.payment_status", default: "Payment Status") %>
      </h3>
      <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
      </svg>
    </div>
    <div class="mb-4">
      <% payment_colors = {
        'pending' => 'bg-yellow-100 text-yellow-800 border-yellow-200',
        'paid' => 'bg-green-100 text-green-800 border-green-200',
        'failed' => 'bg-red-100 text-red-800 border-red-200',
        'refunded' => 'bg-gray-100 text-gray-800 border-gray-200'
      } %>
      <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-semibold border-2 <%= payment_colors[@order.payment_status] || 'bg-gray-100 text-gray-800 border-gray-200' %>">
        <%= @order.payment_status.titleize %>
      </span>
    </div>
    <%= button_to update_payment_status_admin_order_path(@order, locale: I18n.locale, payment_status: :paid),
      method: :patch,
      form: { data: { turbo_confirm: t("admin.actions.confirm", default: "Are you sure?") } },
      class: "w-full inline-flex items-center justify-center px-4 py-2.5 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition-all" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <%= t("admin.orders.mark_paid", default: "Mark as Paid") %>
    <% end %>
  </div>

  <!-- Order Total -->
  <div class="bg-gradient-to-br from-[#465FFF] to-[#3651E6] rounded-xl shadow-lg p-6 text-white">
    <div class="flex items-center justify-between mb-2">
      <h3 class="text-sm font-semibold uppercase tracking-wide opacity-90">
        <%= t("orders.total", default: "Order Total") %>
      </h3>
      <svg class="w-5 h-5 opacity-80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
    </div>
    <div class="text-4xl font-bold mb-1">
      <%= number_to_currency(@order.total_amount) %>
    </div>
    <div class="text-sm opacity-80">
      <%= @order.order_items.sum(:quantity) %> <%= t("admin.orders.items", default: "items").pluralize(@order.order_items.sum(:quantity)) %>
    </div>
  </div>
</div>

<!-- Main Content Grid -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Left Column - Order Items -->
  <div class="lg:col-span-2 space-y-6">
    <!-- Order Items Card -->
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <h2 class="text-lg font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-[#465FFF]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
          </svg>
          <%= t("admin.orders.items", default: "Order Items") %>
        </h2>
      </div>

      <div class="divide-y divide-gray-200">
        <% @order.order_items.each do |item| %>
          <div class="p-6 hover:bg-gray-50 transition-colors">
            <div class="flex items-start gap-4">
              <!-- Product Image -->
              <div class="flex-shrink-0">
                <% if item.product.primary_image&.image&.url %>
                  <%= image_tag item.product.primary_image.image.url, class: "h-20 w-20 rounded-lg object-cover border-2 border-gray-200", alt: item.product.name_en %>
                <% else %>
                  <div class="h-20 w-20 rounded-lg bg-gray-100 flex items-center justify-center border-2 border-gray-200">
                    <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                  </div>
                <% end %>
              </div>

              <!-- Product Details -->
              <div class="flex-1 min-w-0">
                <h3 class="text-base font-semibold text-gray-900 mb-1">
                  <%= item.product.name(I18n.locale) %>
                </h3>
                <p class="text-sm text-gray-500">
                  <%= item.product.category&.name(I18n.locale) %>
                </p>
                <% if item.product_variant %>
                  <p class="text-sm font-medium text-gray-700 mb-2">
                    <%= item.product_variant.display_name %>
                  </p>
                <% else %>
                  <div class="mb-2"></div>
                <% end %>
                <div class="flex items-center gap-4 text-sm">
                  <span class="text-gray-600">
                    <%= t("admin.orders.quantity", default: "Qty") %>:
                    <span class="font-semibold text-gray-900"><%= item.quantity %></span>
                  </span>
                  <span class="text-gray-400">Ã—</span>
                  <span class="text-gray-600">
                    <%= number_to_currency(item.unit_price) %>
                  </span>
                </div>
              </div>

              <!-- Line Total -->
              <div class="text-right flex-shrink-0">
                <div class="text-lg font-bold text-gray-900">
                  <%= number_to_currency(item.line_total) %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Order Summary -->
      <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
        <div class="space-y-2">
          <div class="flex justify-between text-sm text-gray-600">
            <span><%= t("orders.subtotal", default: "Subtotal") %></span>
            <span class="font-medium"><%= number_to_currency(@order.subtotal) %></span>
          </div>
          <div class="flex justify-between text-sm text-gray-600">
            <span><%= t("orders.tax", default: "Tax") %></span>
            <span class="font-medium"><%= number_to_currency(@order.tax_amount) %></span>
          </div>
          <div class="flex justify-between text-sm text-gray-600">
            <span><%= t("orders.shipping", default: "Shipping") %></span>
            <span class="font-medium"><%= number_to_currency(@order.shipping_amount) %></span>
          </div>
          <div class="pt-2 border-t border-gray-300 flex justify-between text-base font-bold text-gray-900">
            <span><%= t("orders.total", default: "Total") %></span>
            <span class="text-[#465FFF]"><%= number_to_currency(@order.total_amount) %></span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Right Column - Customer & Shipping Info -->
  <div class="space-y-6">
    <!-- Customer Information -->
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <h2 class="text-lg font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-[#465FFF]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          <%= t("admin.orders.customer", default: "Customer") %>
        </h2>
      </div>

      <div class="p-6 space-y-3">
        <div class="flex items-start">
          <svg class="w-5 h-5 text-gray-400 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          <div>
            <div class="text-sm text-gray-500"><%= t("admin.orders.name", default: "Name") %></div>
            <div class="font-semibold text-gray-900"><%= @order.name %></div>
          </div>
        </div>

        <div class="flex items-start">
          <svg class="w-5 h-5 text-gray-400 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          <div>
            <div class="text-sm text-gray-500"><%= t("admin.orders.email", default: "Email") %></div>
            <div class="font-medium text-gray-900"><%= @order.email %></div>
          </div>
        </div>

        <div class="flex items-start">
          <svg class="w-5 h-5 text-gray-400 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          <div>
            <div class="text-sm text-gray-500"><%= t("admin.orders.phone", default: "Phone") %></div>
            <div class="font-medium text-gray-900"><%= @order.phone %></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Shipping Information -->
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <h2 class="text-lg font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-[#465FFF]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          <%= t("admin.orders.shipping_address", default: "Shipping Address") %>
        </h2>
      </div>

      <div class="p-6">
        <div class="text-gray-900 space-y-1">
          <div class="font-medium"><%= @order.address %></div>
          <div><%= @order.city %></div>
          <div><%= @order.country %></div>
        </div>
      </div>
    </div>

    <!-- Tracking Information -->
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <h2 class="text-lg font-semibold text-gray-900 flex items-center">
          <svg class="w-5 h-5 mr-2 text-[#465FFF]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"/>
          </svg>
          <%= t("admin.orders.tracking", default: "Tracking") %>
        </h2>
      </div>

      <div class="p-6">
        <% if @order.dhl_tracking_id.present? %>
          <div class="flex items-center justify-between p-3 bg-purple-50 rounded-lg border border-purple-200">
            <div>
              <div class="text-xs text-purple-600 font-medium uppercase tracking-wide">DHL Tracking ID</div>
              <div class="text-sm font-mono font-semibold text-purple-900 mt-1"><%= @order.dhl_tracking_id %></div>
            </div>
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        <% else %>
          <div class="text-center py-4">
            <svg class="w-12 h-12 text-gray-300 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
            </svg>
            <p class="text-sm text-gray-500"><%= t("admin.orders.no_tracking", default: "No tracking information yet") %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

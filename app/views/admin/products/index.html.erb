<!-- Page Header -->
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6 gap-4">
  <div>
    <h1 class="text-2xl font-bold text-gray-900"><%= t("admin.products.title") %></h1>
    <p class="mt-1 text-sm text-gray-600"><%= t("admin.products.subtitle", default: "Manage your product catalog") %></p>
  </div>
  <%= link_to new_admin_product_path(locale: I18n.locale), class: "inline-flex items-center justify-center px-4 py-2 bg-[#465FFF] hover:bg-[#3651E6] text-white font-medium rounded-lg shadow-sm transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#465FFF]" do %>
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
    </svg>
    <%= t("admin.actions.new") %>
  <% end %>
</div>

<!-- Search and Filter Section -->
<div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6 mb-6">
  <%= search_form_for @q, url: admin_products_path(locale: I18n.locale), method: :get, html: { class: "space-y-4" } do |f| %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <!-- Search by Name -->
      <div>
        <%= f.label :name_en_or_name_ar_cont, "Search by Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.search_field :name_en_or_name_ar_cont,
          placeholder: "Product name...",
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#465FFF] focus:border-transparent" %>
      </div>

      <!-- Filter by Subcategory -->
      <div>
        <%= f.label :sub_category_id_eq, "Subcategory", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :sub_category_id_eq,
          grouped_options_for_select(
            Category.active.ordered.map { |cat| [cat.name_en, cat.sub_categories.active.ordered.map { |sc| [sc.name_en, sc.id] }] },
            params.dig(:q, :sub_category_id_eq)
          ),
          { include_blank: "All Subcategories" },
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#465FFF] focus:border-transparent" %>
      </div>

      <!-- Filter by Featured -->
      <div>
        <%= f.label :featured_eq, "Featured", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :featured_eq,
          [["All", ""], ["Featured", true], ["Not Featured", false]],
          {},
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#465FFF] focus:border-transparent" %>
      </div>

      <!-- Filter by Sale -->
      <div>
        <%= f.label :on_sale_eq, "On Sale", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :on_sale_eq,
          [["All", ""], ["On Sale", true], ["Not On Sale", false]],
          {},
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#465FFF] focus:border-transparent" %>
      </div>
    </div>

    <div class="flex items-center gap-2">
      <%= f.submit "Search", class: "px-6 py-2 bg-[#465FFF] hover:bg-[#3651E6] text-white font-medium rounded-lg transition-colors cursor-pointer" %>
      <%= link_to "Reset", admin_products_path(locale: I18n.locale), class: "px-6 py-2 bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium rounded-lg transition-colors" %>
    </div>
  <% end %>
</div>

<!-- Products Table -->
<div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= sort_link(@q, :id, "ID") %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= sort_link(@q, :name_en, t("admin.products.name")) %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= sort_link(@q, :category_id, t("admin.products.category")) %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= sort_link(@q, :price, t("admin.products.price")) %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= sort_link(@q, :stock_quantity, "Stock") %>
          </th>
          <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= sort_link(@q, :featured, "Featured") %>
          </th>
          <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= sort_link(@q, :on_sale, "On Sale") %>
          </th>
          <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("common.actions", default: "Actions") %>
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% if @products.any? %>
          <% @products.each do |product| %>
            <tr class="hover:bg-gray-50 transition-colors">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-500">#<%= product.id %></div>
              </td>
              <td class="px-6 py-4">
                <div class="flex items-center gap-3">
                  <% if product.primary_image&.image&.url %>
                    <%= image_tag product.primary_image.image.url, class: "h-12 w-12 rounded-lg object-cover flex-shrink-0", alt: product.name_en %>
                  <% else %>
                    <div class="h-12 w-12 rounded-lg bg-gray-200 flex items-center justify-center flex-shrink-0">
                      <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                      </svg>
                    </div>
                  <% end %>
                  <div>
                    <div class="text-sm font-medium text-gray-900"><%= product.name_en %></div>
                    <% if product.name_ar.present? %>
                      <div class="text-xs text-gray-500"><%= product.name_ar %></div>
                    <% end %>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if product.category %>
                  <%= render 'admin/shared/badge', text: product.category.name_en, type: 'primary' %>
                <% else %>
                  <span class="text-sm text-gray-400">-</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-semibold text-gray-900"><%= number_to_currency(product.price) %></div>
                <% if product.on_sale? && product.sale_price.present? %>
                  <div class="text-xs text-red-600 line-through"><%= number_to_currency(product.sale_price) %></div>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= product.stock_quantity %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <% if product.featured? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                    Yes
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                    No
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <% if product.on_sale? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"/>
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd"/>
                    </svg>
                    Sale
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                    No
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm space-x-3">
                <%= link_to edit_admin_product_path(product, locale: I18n.locale), class: "inline-flex items-center text-[#465FFF] hover:text-[#3651E6] font-medium transition-colors" do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                  <%= t("admin.actions.edit") %>
                <% end %>
                <%= link_to admin_product_path(product, locale: I18n.locale),
                  data: { turbo_method: :delete, turbo_confirm: t("admin.actions.confirm") },
                  class: "inline-flex items-center text-red-600 hover:text-red-700 font-medium transition-colors" do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                  <%= t("admin.actions.delete") %>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="8" class="px-6 py-12 text-center">
              <div class="text-gray-400">
                <svg class="mx-auto h-12 w-12 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                </svg>
                <p class="text-sm font-medium"><%= t("admin.products.no_products", default: "No products yet") %></p>
                <p class="mt-1 text-xs text-gray-500"><%= t("admin.products.create_first", default: "Create your first product to get started") %></p>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <% if @pagy && @pagy.pages > 1 %>
    <div class="px-6 py-4 border-t border-gray-200 bg-gray-50">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>

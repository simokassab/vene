<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900"><%= t("admin.webhooks.title", default: "Webhooks") %></h1>
      <p class="text-sm text-gray-500 mt-1"><%= t("admin.webhooks.subtitle", default: "View incoming payment webhook notifications") %></p>
    </div>
    <div class="flex items-center gap-2">
      <span class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
        <%= @pagy.count %> <%= t("admin.webhooks.total", default: "total") %>
      </span>
    </div>
  </div>

  <!-- Webhooks Table -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
    <% if @webhooks.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                <%= t("admin.webhooks.webhook_id", default: "Webhook ID") %>
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                <%= t("admin.webhooks.type", default: "Type") %>
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                <%= t("admin.webhooks.order", default: "Order") %>
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                <%= t("admin.webhooks.status", default: "Status") %>
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                <%= t("admin.webhooks.received_at", default: "Received") %>
              </th>
              <th scope="col" class="px-6 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">
                <%= t("common.actions", default: "Actions") %>
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @webhooks.each do |webhook| %>
              <% payload = webhook.payload || {} %>
              <% status = payload["status"] || payload[:status] %>
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="font-mono text-sm text-gray-900"><%= webhook.webhook_id.truncate(20) %></span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                    <%= webhook.webhook_type %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if webhook.order_id.present? %>
                    <%= link_to "##{webhook.order_id}", admin_order_path(webhook.order_id, locale: I18n.locale), class: "text-blue-600 hover:text-blue-800 font-medium" %>
                  <% else %>
                    <span class="text-gray-400">-</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% status_colors = {
                    "success" => "bg-green-100 text-green-800",
                    "fail" => "bg-red-100 text-red-800",
                    "waiting" => "bg-yellow-100 text-yellow-800"
                  } %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_colors[status] || 'bg-gray-100 text-gray-800' %>">
                    <%= status || "unknown" %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                  <div><%= webhook.processed_at.strftime("%Y-%m-%d") %></div>
                  <div class="text-xs text-gray-400"><%= webhook.processed_at.strftime("%H:%M:%S") %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <%= link_to admin_webhook_path(webhook, locale: I18n.locale), class: "inline-flex items-center px-3 py-1.5 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors" do %>
                    <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                    <%= t("admin.actions.view", default: "View") %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <div class="px-6 py-4 border-t border-gray-200 bg-gray-50">
        <%== pagy_nav(@pagy) %>
      </div>
    <% else %>
      <div class="px-6 py-16 text-center">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-100 mb-4">
          <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-1"><%= t("admin.webhooks.no_webhooks", default: "No Webhooks") %></h3>
        <p class="text-sm text-gray-500"><%= t("admin.webhooks.no_webhooks_subtitle", default: "No webhook notifications have been received yet.") %></p>
      </div>
    <% end %>
  </div>
</div>

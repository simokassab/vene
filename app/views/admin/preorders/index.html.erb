<!-- Page Header -->
<div class="mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Pre-Order Management</h1>
  <p class="mt-1 text-sm text-gray-600">View and manage all pre-order items</p>
</div>

<!-- Pre-Order Items Table -->
<div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
  <% if @preorder_items.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Order ID
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Customer
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Product
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Variant
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Quantity
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Est. Delivery
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Order Status
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @preorder_items.each do |item| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="text-sm font-medium text-gray-900">
                    #<%= item.order.id %>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= item.order.name %></div>
                <div class="text-xs text-gray-500"><%= item.order.email %></div>
              </td>
              <td class="px-6 py-4">
                <div class="text-sm text-gray-900"><%= item.product.name(I18n.locale) %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if item.product_variant %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    <%= item.variant_display_name %>
                  </span>
                <% else %>
                  <span class="text-xs text-gray-400">â€”</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= item.quantity %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if item.preorder_estimated_delivery_date %>
                  <div class="text-sm text-gray-900">
                    <%= l(item.preorder_estimated_delivery_date, format: :short) %>
                  </div>
                <% else %>
                  <span class="text-xs text-gray-400">Not specified</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% status_class = case item.order.status
                                  when 'pending', 'payment_pending' then 'bg-yellow-100 text-yellow-800'
                                  when 'paid' then 'bg-green-100 text-green-800'
                                  when 'shipped' then 'bg-blue-100 text-blue-800'
                                  when 'delivered' then 'bg-gray-100 text-gray-800'
                                  when 'canceled' then 'bg-red-100 text-red-800'
                                  else 'bg-gray-100 text-gray-800'
                                  end %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_class %>">
                  <%= item.order.status.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <%= link_to "View Order", admin_order_path(item.order, locale: I18n.locale),
                    class: "text-[#465FFF] hover:text-[#3651E6]" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <% if @pagy.pages > 1 %>
      <div class="px-6 py-4 border-t border-gray-200">
        <%== pagy_nav(@pagy) %>
      </div>
    <% end %>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No Pre-Orders</h3>
      <p class="mt-1 text-sm text-gray-500">There are no pre-order items to display.</p>
    </div>
  <% end %>
</div>

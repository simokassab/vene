<%
  # Form Textarea Component
  # Usage: render 'admin/shared/form_textarea', form: f, field: :description, label: 'Description', rows: 4, required: true

  required ||= false
  placeholder ||= ''
  help_text ||= nil
  error ||= nil
  rows ||= 4

  textarea_classes = "block w-full px-4 py-2.5 text-sm text-gray-900 border border-gray-300 rounded-lg focus:ring-2 focus:ring-[#465FFF] focus:border-[#465FFF] transition-colors"
  textarea_classes += " border-red-300 focus:ring-red-500 focus:border-red-500" if error

  label_classes = "block text-sm font-medium text-gray-700 mb-2"
  label_classes += " after:content-['*'] after:ml-0.5 after:text-red-500" if required
%>

<div class="mb-4">
  <% if label %>
    <%= form.label field, label, class: label_classes %>
  <% end %>

  <%= form.text_area field,
    class: textarea_classes,
    placeholder: placeholder,
    required: required,
    rows: rows
  %>

  <% if help_text %>
    <p class="mt-1 text-xs text-gray-500"><%= help_text %></p>
  <% end %>

  <% if error %>
    <p class="mt-1 text-xs text-red-600"><%= error %></p>
  <% end %>
</div>

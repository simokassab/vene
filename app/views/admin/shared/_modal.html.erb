<%
  # Modal Component with Alpine.js
  # Usage: render 'admin/shared/modal', id: 'delete-modal', title: 'Confirm Delete', size: 'sm' do
  #   modal content here
  # end

  id ||= 'modal'
  title ||= ''
  size ||= 'md'
  close_text ||= t('common.cancel', default: 'Cancel')

  size_classes = {
    'sm' => 'max-w-md',
    'md' => 'max-w-lg',
    'lg' => 'max-w-2xl',
    'xl' => 'max-w-4xl'
  }
%>

<div
  x-data="{ open: false }"
  @open-modal-<%= id %>.window="open = true"
  @keydown.escape.window="open = false"
  x-show="open"
  class="fixed inset-0 z-50 overflow-y-auto"
  style="display: none;"
>
  <!-- Backdrop -->
  <div
    class="fixed inset-0 bg-black bg-opacity-50 transition-opacity"
    @click="open = false"
    x-show="open"
    x-transition:enter="ease-out duration-300"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="ease-in duration-200"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
  ></div>

  <!-- Modal -->
  <div class="flex min-h-screen items-center justify-center p-4">
    <div
      class="relative w-full <%= size_classes[size] %> bg-white rounded-xl shadow-xl"
      @click.away="open = false"
      x-show="open"
      x-transition:enter="ease-out duration-300"
      x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
      x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
      x-transition:leave="ease-in duration-200"
      x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
      x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
    >
      <!-- Header -->
      <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
        <h3 class="text-lg font-semibold text-gray-900"><%= title %></h3>
        <button
          @click="open = false"
          class="text-gray-400 hover:text-gray-600 transition-colors"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>

      <!-- Body -->
      <div class="px-6 py-4">
        <%= yield %>
      </div>

      <!-- Footer (if actions provided) -->
      <% if defined?(actions) && actions %>
        <div class="px-6 py-4 border-t border-gray-200 flex items-center justify-end space-x-3">
          <button
            @click="open = false"
            class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors"
          >
            <%= close_text %>
          </button>
          <%= actions %>
        </div>
      <% end %>
    </div>
  </div>
</div>

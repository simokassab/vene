<!-- Page Header -->
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6 gap-4">
  <div>
    <h1 class="text-2xl font-bold text-gray-900"><%= t("admin.coupons.title") %></h1>
    <p class="mt-1 text-sm text-gray-600"><%= t("admin.coupons.subtitle", default: "Manage promotional discount codes") %></p>
  </div>
  <%= link_to new_admin_coupon_path(locale: I18n.locale), class: "inline-flex items-center justify-center px-4 py-2 bg-[#465FFF] hover:bg-[#3651E6] text-white font-medium rounded-lg shadow-sm transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#465FFF]" do %>
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
    </svg>
    <%= t("admin.coupons.new") %>
  <% end %>
</div>

<!-- Search Form -->
<div class="bg-white rounded-xl border border-gray-200 shadow-sm p-4 mb-6">
  <%= search_form_for [:admin, @q], html: { class: "flex flex-wrap gap-4" } do |f| %>
    <div class="flex-1 min-w-[200px]">
      <%= f.label :code_cont, t("admin.coupons.search_code", default: "Code"), class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.search_field :code_cont, class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-[#465FFF] focus:ring focus:ring-[#465FFF] focus:ring-opacity-50 font-mono", placeholder: t("admin.coupons.search_code_placeholder", default: "Search by code...") %>
    </div>
    <div class="flex-1 min-w-[200px]">
      <%= f.label :discount_type_eq, t("admin.coupons.discount_type", default: "Discount Type"), class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :discount_type_eq, options_for_select([["All", ""], ["Percentage", "percentage"], ["Fixed Amount", "fixed"]], @q.discount_type_eq), {}, class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-[#465FFF] focus:ring focus:ring-[#465FFF] focus:ring-opacity-50" %>
    </div>
    <div class="flex-1 min-w-[200px]">
      <%= f.label :active_eq, t("admin.coupons.status", default: "Status"), class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :active_eq, options_for_select([["All", ""], ["Active", "true"], ["Inactive", "false"]], @q.active_eq), {}, class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-[#465FFF] focus:ring focus:ring-[#465FFF] focus:ring-opacity-50" %>
    </div>
    <div class="flex items-end gap-2">
      <%= f.submit t("admin.actions.search", default: "Search"), class: "px-4 py-2 bg-[#465FFF] hover:bg-[#3651E6] text-white font-medium rounded-lg shadow-sm transition-all" %>
      <%= link_to t("admin.actions.reset", default: "Reset"), admin_coupons_path(locale: I18n.locale), class: "px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium rounded-lg transition-all" %>
    </div>
  <% end %>
</div>

<!-- Coupons Table -->
<div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("admin.coupons.code", default: "Code") %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("admin.coupons.discount", default: "Discount") %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("admin.coupons.valid_dates", default: "Valid Dates") %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("admin.coupons.usage", default: "Usage") %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("admin.coupons.status", default: "Status") %>
          </th>
          <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("common.actions", default: "Actions") %>
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% if @coupons.any? %>
          <% @coupons.each do |coupon| %>
            <tr class="hover:bg-gray-50 transition-colors">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-mono font-bold text-gray-900"><%= coupon.code %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= coupon.discount_display %></div>
                <div class="text-xs text-gray-500"><%= coupon.discount_type.capitalize %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if coupon.valid_from || coupon.valid_until %>
                  <div class="text-sm text-gray-900">
                    <%= l(coupon.valid_from, format: :short) if coupon.valid_from %>
                    <%= " - " if coupon.valid_from && coupon.valid_until %>
                    <%= l(coupon.valid_until, format: :short) if coupon.valid_until %>
                  </div>
                <% else %>
                  <div class="text-sm text-gray-500">-</div>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">
                  <%= coupon.usage_count %><%= " / #{coupon.usage_limit}" if coupon.usage_limit %>
                </div>
                <% if coupon.single_use_per_user %>
                  <div class="text-xs text-gray-500"><%= t("admin.coupons.single_use", default: "Single use") %></div>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= render 'admin/shared/badge',
                  text: coupon.active? ? t("common.active", default: "Active") : t("common.inactive", default: "Inactive"),
                  type: coupon.active? ? 'success' : 'default'
                %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm space-x-3">
                <%= link_to edit_admin_coupon_path(coupon, locale: I18n.locale), class: "inline-flex items-center text-[#465FFF] hover:text-[#3651E6] font-medium transition-colors" do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                  <%= t("admin.actions.edit") %>
                <% end %>
                <%= link_to admin_coupon_path(coupon, locale: I18n.locale),
                  data: { turbo_method: :delete, turbo_confirm: t("admin.actions.confirm") },
                  class: "inline-flex items-center text-red-600 hover:text-red-700 font-medium transition-colors" do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                  <%= t("admin.actions.delete") %>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="6" class="px-6 py-12 text-center">
              <div class="text-gray-400">
                <svg class="mx-auto h-12 w-12 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"/>
                </svg>
                <p class="text-sm font-medium"><%= t("admin.coupons.no_coupons", default: "No coupons yet") %></p>
                <p class="mt-1 text-xs text-gray-500"><%= t("admin.coupons.create_first", default: "Create your first coupon to offer discounts") %></p>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- Pagination -->
<% if @coupons.any? %>
  <div class="mt-6">
    <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
  </div>
<% end %>

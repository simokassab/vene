<!-- Page Header -->
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6 gap-4">
  <div>
    <h1 class="text-2xl font-bold text-gray-900"><%= t("admin.variant_types.title") %></h1>
    <p class="mt-1 text-sm text-gray-600"><%= t("admin.variant_types.subtitle") %></p>
  </div>
  <%= link_to new_admin_variant_type_path(locale: I18n.locale),
    class: "inline-flex items-center justify-center px-4 py-2 bg-[#465FFF] hover:bg-[#3651E6] text-white font-medium rounded-lg shadow-sm transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#465FFF]" do %>
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
    </svg>
    <%= t("admin.variant_types.new") %>
  <% end %>
</div>

<!-- Variant Types Table -->
<div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("admin.variant_types.name") %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("admin.variant_types.options") %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("admin.variant_types.status") %>
          </th>
          <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("common.actions") %>
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% if @variant_types.any? %>
          <% @variant_types.each do |variant_type| %>
            <tr class="hover:bg-gray-50 transition-colors">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="font-medium text-gray-900"><%= variant_type.name %></div>
                <% if variant_type.description.present? %>
                  <div class="text-sm text-gray-500"><%= variant_type.description %></div>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <div class="flex flex-wrap gap-1">
                  <% variant_type.variant_options.active.ordered.limit(5).each do |option| %>
                    <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-gray-100 text-gray-800">
                      <%= option.value %>
                    </span>
                  <% end %>
                  <% if variant_type.variant_options.count > 5 %>
                    <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-gray-200 text-gray-600">
                      <%= t("admin.variant_types.more_options", count: variant_type.variant_options.count - 5) %>
                    </span>
                  <% end %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= render 'admin/shared/badge',
                  text: variant_type.active ? t("common.active") : t("common.inactive"),
                  type: variant_type.active ? 'success' : 'default'
                %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm space-x-3">
                <%= link_to edit_admin_variant_type_path(variant_type, locale: I18n.locale),
                  class: "inline-flex items-center text-[#465FFF] hover:text-[#3651E6] font-medium transition-colors" do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                  <%= t("admin.actions.edit") %>
                <% end %>
                <%= link_to admin_variant_type_path(variant_type, locale: I18n.locale),
                  data: { turbo_method: :delete, turbo_confirm: t("admin.actions.confirm") },
                  class: "inline-flex items-center text-red-600 hover:text-red-700 font-medium transition-colors" do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                  <%= t("admin.actions.delete") %>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="4" class="px-6 py-12 text-center">
              <div class="text-gray-400">
                <svg class="mx-auto h-12 w-12 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
                </svg>
                <p class="text-sm font-medium"><%= t("admin.variant_types.no_variant_types") %></p>
                <p class="mt-1 text-xs text-gray-500"><%= t("admin.variant_types.create_first") %></p>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <% if @pagy.pages > 1 %>
    <div class="px-6 py-4 border-t border-gray-200 bg-gray-50">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>

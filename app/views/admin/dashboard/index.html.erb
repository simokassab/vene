<!-- Page Header -->
<div class="mb-6">
  <h1 class="text-2xl font-bold text-gray-900"><%= t("admin.nav.dashboard") %></h1>
  <p class="mt-1 text-sm text-gray-600"><%= t("admin.dashboard.welcome", default: "Welcome to your admin dashboard") %></p>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
  <%= render 'admin/shared/stat_card',
    title: t("admin.dashboard.products"),
    value: @products_count.to_s,
    icon: 'ðŸ“¦',
    trend: '+12%',
    trend_direction: 'up',
    color: 'blue'
  %>

  <%= render 'admin/shared/stat_card',
    title: t("admin.dashboard.orders"),
    value: @orders_count.to_s,
    icon: 'ðŸ›’',
    trend: '+8%',
    trend_direction: 'up',
    color: 'emerald'
  %>

  <%= render 'admin/shared/stat_card',
    title: t("admin.dashboard.revenue", default: "Revenue"),
    value: number_to_currency(@recent_orders.sum(&:total_amount)),
    icon: 'ðŸ’°',
    trend: '+15%',
    trend_direction: 'up',
    color: 'purple'
  %>
</div>

<!-- Recent Orders Table -->
<%= render 'admin/shared/card', title: t("admin.dashboard.recent_orders"), padding: false do %>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("admin.orders.order_number", default: "Order") %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("admin.orders.status") %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("admin.orders.total") %>
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("admin.orders.date", default: "Date") %>
          </th>
          <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= t("common.actions", default: "Actions") %>
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% if @recent_orders.any? %>
          <% @recent_orders.each do |order| %>
            <tr class="hover:bg-gray-50 transition-colors">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">#<%= order.id %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%
                  status_type = case order.status
                  when 'pending' then 'warning'
                  when 'processing' then 'info'
                  when 'completed' then 'success'
                  when 'cancelled' then 'danger'
                  else 'default'
                  end
                %>
                <%= render 'admin/shared/badge', text: order.status.capitalize, type: status_type %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-semibold text-gray-900"><%= number_to_currency(order.total_amount) %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-500"><%= order.created_at.strftime('%b %d, %Y') %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                <%= link_to admin_order_path(order, locale: I18n.locale), class: "inline-flex items-center text-[#465FFF] hover:text-[#3651E6] font-medium transition-colors" do %>
                  <%= t("admin.actions.view") %>
                  <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="5" class="px-6 py-12 text-center">
              <div class="text-gray-400">
                <svg class="mx-auto h-12 w-12 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
                </svg>
                <p class="text-sm font-medium"><%= t("admin.dashboard.no_orders", default: "No orders yet") %></p>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
